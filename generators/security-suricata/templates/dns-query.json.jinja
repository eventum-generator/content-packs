{%- set fid = shared.get('flow_id_counter', 100000000000000) -%}
{%- do shared.set('flow_id_counter', fid + module.rand.number.integer(1, 500)) -%}
{%- set src_ip = params.internal_subnet ~ "." ~ module.rand.number.integer(2, 254) -%}
{%- set src_port = module.rand.number.integer(32768, 65535) -%}
{%- set dst_ip = params.dns_server_ip -%}
{%- set dst_port = 53 -%}
{%- set proto = "udp" -%}
{%- set domain = (samples.domains | random).domain -%}
{%- set dns_id = module.rand.number.integer(1, 65535) -%}
{%- set query_types = {"A": 70, "AAAA": 15, "CNAME": 5, "MX": 3, "TXT": 3, "SOA": 2, "NS": 2} -%}
{%- set rrtype = module.rand.weighted_choice(query_types | list, query_types.values() | list) -%}
{%- set cid_input = (src_ip ~ ":" ~ (src_port | string) ~ "<>" ~ dst_ip ~ ":" ~ (dst_port | string) ~ "/" ~ proto).encode() -%}
{%- set community_id = "1:" ~ module.base64.b64encode(module.hashlib.sha1(cid_input).digest()).decode() -%}
{%- set dns_queries = shared.get('dns_queries', []) -%}
{%- do dns_queries.append({
    "flow_id": fid,
    "src_ip": src_ip,
    "src_port": src_port,
    "dst_ip": dst_ip,
    "dst_port": dst_port,
    "community_id": community_id,
    "dns_id": dns_id,
    "rrname": domain,
    "rrtype": rrtype
}) -%}
{%- if dns_queries | length > 100 -%}{%- do dns_queries.pop(0) -%}{%- endif -%}
{%- do shared.set('dns_queries', dns_queries) -%}
{%- set flows = shared.get('flows', []) -%}
{%- do flows.append({
    "flow_id": fid,
    "src_ip": src_ip,
    "src_port": src_port,
    "dst_ip": dst_ip,
    "dst_port": dst_port,
    "proto": "UDP",
    "app_proto": "dns",
    "community_id": community_id,
    "bytes_ts": module.rand.number.integer(60, 200),
    "bytes_tc": module.rand.number.integer(80, 500),
    "pkts_ts": 1,
    "pkts_tc": 1,
    "start": timestamp.strftime('%Y-%m-%dT%H:%M:%S.%f') ~ "+0000"
}) -%}
{%- if flows | length > 200 -%}{%- do flows.pop(0) -%}{%- endif -%}
{%- do shared.set('flows', flows) -%}
