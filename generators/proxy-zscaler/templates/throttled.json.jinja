{%- from 'templates/_base.json.jinja' import agent_block, ecs_block, host_block, device_block, user_block, network_block, tls_block, zscaler_device_block, zscaler_datacenter_block -%}
{%- set record_id = shared.get('record_id', 1) -%}
{#- Pick device and user -#}
{%- set device = samples.devices | random -%}
{%- set user = samples.users | random -%}
{%- set external_dev_id = module.rand.string.digits(8) -%}
{#- Throttled content: streaming, large downloads, cloud storage -#}
{%- set throttle_targets = [
  {"domain": "www.youtube.com", "path": "/watch?v=" ~ module.rand.string.hex(11), "sub": "Video Streaming", "super": "Entertainment/Recreation", "class": "Bandwidth Loss", "bw_class": "Entertainment", "bw_rule": "Throttle_Streaming"},
  {"domain": "www.netflix.com", "path": "/watch/" ~ module.rand.number.integer(10000000, 99999999), "sub": "Video Streaming", "super": "Entertainment/Recreation", "class": "Bandwidth Loss", "bw_class": "Entertainment", "bw_rule": "Throttle_Streaming"},
  {"domain": "open.spotify.com", "path": "/track/" ~ module.rand.string.hex(22), "sub": "Music and Audio Streaming", "super": "Entertainment/Recreation", "class": "Bandwidth Loss", "bw_class": "Entertainment", "bw_rule": "Throttle_Streaming"},
  {"domain": "www.twitch.tv", "path": "/videos/" ~ module.rand.number.integer(1000000, 9999999), "sub": "Video Streaming", "super": "Entertainment/Recreation", "class": "Bandwidth Loss", "bw_class": "Entertainment", "bw_rule": "Throttle_Streaming"},
  {"domain": "dl.dropboxusercontent.com", "path": "/s/" ~ module.rand.string.hex(20) ~ "/largefile.zip", "sub": "Cloud Storage", "super": "Internet Communication", "class": "Business Use", "bw_class": "Cloud Services", "bw_rule": "Throttle_Cloud_Storage"},
  {"domain": "drive.google.com", "path": "/uc?export=download&id=" ~ module.rand.string.hex(33), "sub": "Cloud Storage", "super": "Internet Communication", "class": "Business Use", "bw_class": "Cloud Services", "bw_rule": "Throttle_Cloud_Storage"},
  {"domain": "objects-us-east-1.dream.io", "path": "/backup/" ~ module.rand.string.hex(16) ~ ".tar.gz", "sub": "Web Host", "super": "Information Technology", "class": "Business Use", "bw_class": "Cloud Services", "bw_rule": "Throttle_Cloud_Storage"}
] -%}
{%- set target = throttle_targets | random -%}
{#- Cloud app -#}
{%- set app = samples.cloud_apps.weighted_pick('weight') -%}
{#- HTTP details -#}
{%- set protocol = "HTTPS" -%}
{%- set http_method = "GET" -%}
{%- set user_agent = module.faker.locale.en_US.user_agent() -%}
{#- Network details -#}
{%- set src_ip = "10." ~ module.rand.number.integer(1, 254) ~ "." ~ module.rand.number.integer(1, 254) ~ "." ~ module.rand.number.integer(1, 254) -%}
{%- set src_port = module.rand.number.integer(49152, 65535) -%}
{%- set dst_ip = module.rand.network.ip_v4_public() -%}
{%- set clt_pub_ip = params.get('client_public_ip', '203.0.113.' ~ module.rand.number.integer(1, 254)) -%}
{#- Byte sizes (large â€” streaming/downloads, but throttled) -#}
{%- set req_header = module.rand.number.integer(200, 600) -%}
{%- set req_payload = module.rand.number.integer(0, 1000) -%}
{%- set req_size = req_header + req_payload -%}
{%- set resp_header = module.rand.number.integer(200, 800) -%}
{%- set resp_payload = module.rand.number.clamp(module.rand.number.lognormal(12, 1.5) | int, 50000, 50000000) -%}
{%- set resp_size = resp_header + resp_payload -%}
{%- set total_size = req_size + resp_size -%}
{#- Throttle amounts -#}
{%- set throttle_req = module.rand.number.integer(0, 10) -%}
{%- set throttle_resp = module.rand.number.clamp(module.rand.number.lognormal(8, 1) | int, 100, 5000000) -%}
{#- TLS details -#}
{%- set tls_version = module.rand.weighted_choice(["TLS1.3", "TLS1.2"], [80, 20]) -%}
{%- set cipher = module.rand.weighted_choice(["TLS_AES_256_GCM_SHA384", "TLS_AES_128_GCM_SHA256", "TLS_CHACHA20_POLY1305_SHA256"], [35, 40, 25]) -%}
{%- set dst_country = module.rand.weighted_choice(["United States", "Germany", "United Kingdom", "Netherlands", "Ireland", "Japan"], [40, 12, 12, 10, 14, 12]) -%}
{%- set url_full = "https://" ~ target.domain ~ target.path -%}
{
    "@timestamp": "{{ timestamp.isoformat() }}",
    {{ agent_block(params) }},
    "cloud": {
        "provider": "{{ params.cloudname }}"
    },
    "destination": {
        "domain": "{{ target.domain }}",
        "ip": "{{ dst_ip }}",
        "port": 443
    },
    {{ device_block(device, external_dev_id) }},
    {{ ecs_block() }},
    "event": {
        "action": "allowed",
        "category": ["web"],
        "id": "{{ record_id }}",
        "kind": "event",
        "module": "zscaler_zia",
        "outcome": "success",
        "reason": "Bandwidth Policy Applied",
        "timezone": "{{ params.get('timezone', 'UTC') }}",
        "type": ["access"]
    },
    {{ host_block(device) }},
    "http": {
        "request": {
            "bytes": {{ req_size }},
            "method": "{{ http_method }}",
            "referrer": "https://{{ target.domain }}/"
        },
        "response": {
            "bytes": {{ resp_size }}
        },
        "version": ["1.1"]
    },
    {{ network_block(protocol) }},
    "organization": {
        "name": "{{ params.company }}"
    },
    "related": {
        "hosts": ["{{ device.hostname | lower }}"],
        "ip": ["{{ src_ip }}", "{{ clt_pub_ip }}", "{{ dst_ip }}"],
        "user": ["{{ user.email.split('@')[0] }}", "{{ user.email }}"]
    },
    "rule": {
        "name": ["{{ target.bw_rule }}"]
    },
    "source": {
        "ip": "{{ src_ip }}",
        "nat": {
            "ip": "{{ clt_pub_ip }}"
        },
        "port": {{ src_port }}
    },
    {{ tls_block(tls_version, cipher) }},
    "url": {
        "domain": "{{ target.domain }}",
        "full": {{ url_full | tojson }},
        "original": {{ url_full | tojson }},
        "path": {{ target.path | tojson }},
        "scheme": "https"
    },
    {{ user_block(user) }},
    "user_agent": {
        "original": {{ user_agent | tojson }}
    },
    "zscaler_zia": {
        "web": {
            "action": "Allowed",
            "app": {
                "class": "{{ app['class'] }}",
                "name": "{{ app.name }}",
                "risk_score": "{{ app.risk_score }}"
            },
            "bandwidth_class_name": "{{ target.bw_class }}",
            "bandwidth_rule_name": "{{ target.bw_rule }}",
            "bandwidth_throttle": "Yes",
            "client": {
                "cipher": "{{ cipher }}",
                "cipher_reuse": "{{ module.rand.weighted_choice(['Yes', 'No'], [55, 45]) }}",
                "internet": {
                    "ip": "{{ clt_pub_ip }}"
                },
                "ip": "{{ src_ip }}",
                "public_ip": "{{ clt_pub_ip }}",
                "source_port": {{ src_port }},
                "tls_version": "{{ tls_version }}"
            },
            "cloud_name": "{{ params.cloudname }}",
            "company": "{{ params.company }}",
            "content_type": "{{ module.rand.weighted_choice(['video/mp4', 'audio/mpeg', 'application/octet-stream', 'application/zip'], [35, 20, 30, 15]) }}",
            {{ zscaler_datacenter_block(params) }},
            "department": "{{ user.department }}",
            {{ zscaler_device_block(device, user) }},
            "dlp": {
                "dictionaries": {
                    "name": "None"
                },
                "engine": "None"
            },
            "dstip_country": "{{ dst_country }}",
            "eedone": "Yes",
            "flow_type": "Direct",
            "host": "{{ target.domain }}",
            "location": "{{ user.location }}",
            "malware": {
                "category": "None",
                "class": "None"
            },
            "module": "Bandwidth Control",
            "product_version": "{{ params.product_version }}",
            "reason": "Bandwidth Policy Applied",
            "record": {
                "id": "{{ record_id }}"
            },
            "request": {
                "header_size": {{ req_header }},
                "method": "{{ http_method }}",
                "payload": {{ req_payload }},
                "size": {{ req_size }},
                "version": "1.1"
            },
            "response": {
                "code": "200",
                "header_size": {{ resp_header }},
                "payload": {{ resp_payload }},
                "size": {{ resp_size }},
                "version": "1"
            },
            "risk": {
                "score": {{ module.rand.number.integer(0, 15) }}
            },
            "rule": {
                "name": "{{ target.bw_rule }}",
                "type": "Bandwidth Control"
            },
            "server": {
                "certificate_validation_chain": "Pass",
                "certificate_validation_type": "{{ module.rand.weighted_choice(['OV (Organization Validation)', 'DV (Domain Validation)'], [50, 50]) }}",
                "cipher": "{{ cipher }}",
                "cipher_reuse": "{{ module.rand.weighted_choice(['Yes', 'No'], [45, 55]) }}",
                "ip": "{{ dst_ip }}",
                "ocsp_result": "Good",
                "tls_version": "{{ tls_version }}",
                "wildcard_certificate": "{{ module.rand.weighted_choice(['Yes', 'No'], [50, 50]) }}"
            },
            "ssl_decrypted": "{{ module.rand.weighted_choice(['Yes', 'No'], [60, 40]) }}",
            "ssl_rulename": "Standard_SSL_Inspection",
            "threat": {
                "name": "None",
                "severity": "None (0)"
            },
            "throttle": {
                "request_size": {{ throttle_req }},
                "response_size": {{ throttle_resp }}
            },
            "timezone": "{{ params.get('timezone', 'UTC') }}",
            "total": {
                "size": {{ total_size }}
            },
            "url": {
                "category": {
                    "sub": "{{ target.sub }}",
                    "super": "{{ target.super }}"
                },
                "category_method": "Database A",
                "class": "{{ target['class'] }}"
            },
            "user_agent": {
                "class": "{{ module.rand.weighted_choice(['Chrome', 'Firefox', 'Safari', 'Edge'], [50, 20, 15, 15]) }}",
                "name": {{ user_agent | tojson }}
            },
            "z_tunnel_version": "{{ device.ztunnel_version }}"
        }
    }
}
{%- do shared.set('record_id', (record_id + 1) % 2147483647) -%}
