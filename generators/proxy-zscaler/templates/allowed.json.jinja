{%- from 'templates/_base.json.jinja' import agent_block, ecs_block, host_block, device_block, user_block, network_block, tls_block, zscaler_device_block, zscaler_datacenter_block -%}
{%- set record_id = shared.get('record_id', 1) -%}
{#- Pick device and user -#}
{%- set device = samples.devices | random -%}
{%- set user = samples.users | random -%}
{%- set external_dev_id = module.rand.string.digits(8) -%}
{#- Pick URL category -#}
{%- set category = samples.url_categories_allowed.weighted_pick('weight') -%}
{%- set url_entry = category.urls | random -%}
{#- Cloud app -#}
{%- set app = samples.cloud_apps.weighted_pick('weight') -%}
{#- HTTP details -#}
{%- set protocol = module.rand.weighted_choice(["HTTPS", "HTTP"], [92, 8]) -%}
{%- set http_method = module.rand.weighted_choice(["GET", "POST", "PUT", "DELETE", "HEAD", "OPTIONS", "CONNECT"], [72, 15, 3, 1, 3, 2, 4]) -%}
{%- set resp_code = module.rand.weighted_choice(["200", "301", "302", "304", "404", "403", "500"], [78, 4, 5, 8, 3, 1, 1]) -%}
{%- set user_agent = module.faker.locale.en_US.user_agent() -%}
{%- set content_type = module.rand.weighted_choice(["text/html", "application/json", "application/javascript", "text/css", "image/png", "image/jpeg", "application/octet-stream"], [30, 20, 15, 10, 10, 8, 7]) -%}
{#- Network details -#}
{%- set src_ip = "10." ~ module.rand.number.integer(1, 254) ~ "." ~ module.rand.number.integer(1, 254) ~ "." ~ module.rand.number.integer(1, 254) -%}
{%- set src_port = module.rand.number.integer(49152, 65535) -%}
{%- set dst_ip = module.rand.network.ip_v4_public() -%}
{%- set dst_port = 443 if protocol == "HTTPS" else 80 -%}
{%- set clt_pub_ip = params.get('client_public_ip', '203.0.113.' ~ module.rand.number.integer(1, 254)) -%}
{#- Byte sizes (lognormal for realistic distribution) -#}
{%- set req_header = module.rand.number.integer(200, 800) -%}
{%- set req_payload = module.rand.number.clamp(module.rand.number.lognormal(6, 1.5) | int, 0, 500000) -%}
{%- set req_size = req_header + req_payload -%}
{%- set resp_header = module.rand.number.integer(200, 1200) -%}
{%- set resp_payload = module.rand.number.clamp(module.rand.number.lognormal(8, 2) | int, 100, 10000000) -%}
{%- set resp_size = resp_header + resp_payload -%}
{%- set total_size = req_size + resp_size -%}
{#- TLS details -#}
{%- set tls_version = module.rand.weighted_choice(["TLS1.3", "TLS1.2"], [75, 25]) -%}
{%- set cipher = module.rand.weighted_choice(["TLS_AES_256_GCM_SHA384", "TLS_AES_128_GCM_SHA256", "TLS_CHACHA20_POLY1305_SHA256", "ECDHE-RSA-AES256-GCM-SHA384", "ECDHE-RSA-AES128-GCM-SHA256"], [35, 30, 10, 15, 10]) -%}
{%- set ssl_decrypted = module.rand.weighted_choice(["Yes", "No"], [70, 30]) -%}
{#- Risk score -#}
{%- set risk_score = module.rand.number.integer(0, 10) -%}
{#- Destination country -#}
{%- set dst_country = module.rand.weighted_choice(["United States", "Germany", "United Kingdom", "Netherlands", "Ireland", "Japan", "Canada", "France", "Australia", "Singapore"], [35, 10, 10, 8, 8, 7, 7, 5, 5, 5]) -%}
{%- set url_scheme = "https" if protocol == "HTTPS" else "http" -%}
{%- set url_full = url_scheme ~ "://" ~ url_entry.domain ~ url_entry.path -%}
{
    "@timestamp": "{{ timestamp.isoformat() }}",
    {{ agent_block(params) }},
    "cloud": {
        "provider": "{{ params.cloudname }}"
    },
    "destination": {
        "domain": "{{ url_entry.domain }}",
        "ip": "{{ dst_ip }}",
        "port": {{ dst_port }}
    },
    {{ device_block(device, external_dev_id) }},
    {{ ecs_block() }},
    "event": {
        "action": "allowed",
        "category": ["web"],
        "id": "{{ record_id }}",
        "kind": "event",
        "module": "zscaler_zia",
        "outcome": "success",
        "reason": "{{ module.rand.weighted_choice(['Safe Content', 'Trusted Cloud Service', 'Policy Permit', 'Allowed by URL Filtering'], [50, 25, 15, 10]) }}",
        "timezone": "{{ params.get('timezone', 'UTC') }}",
        "type": ["access"]
    },
    {{ host_block(device) }},
    "http": {
        "request": {
            "bytes": {{ req_size }},
            "method": "{{ http_method }}",
            "referrer": "{{ url_scheme }}://{{ url_entry.domain }}/"
        },
        "response": {
            "bytes": {{ resp_size }}
        },
        "version": ["1.1"]
    },
    {{ network_block(protocol) }},
    "organization": {
        "name": "{{ params.company }}"
    },
    "related": {
        "hosts": ["{{ device.hostname | lower }}"],
        "ip": ["{{ src_ip }}", "{{ clt_pub_ip }}", "{{ dst_ip }}"],
        "user": ["{{ user.email.split('@')[0] }}", "{{ user.email }}"]
    },
    "rule": {
        "name": ["{{ module.rand.weighted_choice(['Default_URL_Filtering', 'Allow_Business_Apps', 'Allow_Cloud_Services', 'General_Access_Policy'], [30, 30, 25, 15]) }}"]
    },
    "source": {
        "ip": "{{ src_ip }}",
        "nat": {
            "ip": "{{ clt_pub_ip }}"
        },
        "port": {{ src_port }}
    },
    {{ tls_block(tls_version, cipher) }},
    "url": {
        "domain": "{{ url_entry.domain }}",
        "full": {{ url_full | tojson }},
        "original": {{ url_full | tojson }},
        "path": "{{ url_entry.path }}",
        "scheme": "{{ url_scheme }}"
    },
    {{ user_block(user) }},
    "user_agent": {
        "original": {{ user_agent | tojson }}
    },
    "zscaler_zia": {
        "web": {
            "action": "Allowed",
            "app": {
                "class": "{{ app['class'] }}",
                "name": "{{ app.name }}",
                "risk_score": "{{ app.risk_score }}"
            },
            "bandwidth_throttle": "No",
            "client": {
                "cipher": "{{ cipher }}",
                "cipher_reuse": "{{ module.rand.weighted_choice(['Yes', 'No'], [60, 40]) }}",
                "internet": {
                    "ip": "{{ clt_pub_ip }}"
                },
                "ip": "{{ src_ip }}",
                "public_ip": "{{ clt_pub_ip }}",
                "source_port": {{ src_port }},
                "tls_version": "{{ tls_version }}"
            },
            "cloud_name": "{{ params.cloudname }}",
            "company": "{{ params.company }}",
            "content_type": "{{ content_type }}",
            {{ zscaler_datacenter_block(params) }},
            "department": "{{ user.department }}",
            {{ zscaler_device_block(device, user) }},
            "dlp": {
                "dictionaries": {
                    "name": "None"
                },
                "engine": "None"
            },
            "dstip_country": "{{ dst_country }}",
            "eedone": "Yes",
            "flow_type": "Direct",
            "host": "{{ url_entry.domain }}",
            "location": "{{ user.location }}",
            "malware": {
                "category": "None",
                "class": "None"
            },
            "module": "Web Security",
            "product_version": "{{ params.product_version }}",
            "reason": "Safe Content",
            "record": {
                "id": "{{ record_id }}"
            },
            "request": {
                "header_size": {{ req_header }},
                "method": "{{ http_method }}",
                "payload": {{ req_payload }},
                "size": {{ req_size }},
                "version": "1.1"
            },
            "response": {
                "code": "{{ resp_code }}",
                "header_size": {{ resp_header }},
                "payload": {{ resp_payload }},
                "size": {{ resp_size }},
                "version": "1"
            },
            "risk": {
                "score": {{ risk_score }}
            },
            "rule": {
                "type": "URL Filtering"
            },
            "server": {
                "certificate_validation_chain": "{{ module.rand.weighted_choice(['Pass', 'Unknown'], [90, 10]) }}",
                "certificate_validation_type": "{{ module.rand.weighted_choice(['OV (Organization Validation)', 'DV (Domain Validation)', 'EV (Extended Validation)'], [50, 35, 15]) }}",
                "cipher": "{{ cipher }}",
                "cipher_reuse": "{{ module.rand.weighted_choice(['Yes', 'No', 'Unknown'], [40, 40, 20]) }}",
                "ip": "{{ dst_ip }}",
                "ocsp_result": "{{ module.rand.weighted_choice(['Good', 'Unknown'], [85, 15]) }}",
                "tls_version": "{{ tls_version }}",
                "wildcard_certificate": "{{ module.rand.weighted_choice(['Yes', 'No'], [40, 60]) }}"
            },
            "ssl_decrypted": "{{ ssl_decrypted }}",
            "ssl_rulename": "{{ module.rand.weighted_choice(['Standard_SSL_Inspection', 'Inspect_All_Traffic', 'Bypass_Trusted'], [50, 30, 20]) }}",
            "threat": {
                "name": "None",
                "severity": "None (0)"
            },
            "throttle": {
                "request_size": 0,
                "response_size": 0
            },
            "timezone": "{{ params.get('timezone', 'UTC') }}",
            "total": {
                "size": {{ total_size }}
            },
            "url": {
                "category": {
                    "sub": "{{ category.sub }}",
                    "super": "{{ category.super }}"
                },
                "category_method": "{{ module.rand.weighted_choice(['Database A', 'Machine Learning'], [85, 15]) }}",
                "class": "{{ category['class'] }}"
            },
            "user_agent": {
                "class": "{{ module.rand.weighted_choice(['Firefox', 'Chrome', 'Safari', 'Edge', 'Other'], [20, 50, 15, 10, 5]) }}",
                "name": {{ user_agent | tojson }}
            },
            "z_tunnel_version": "{{ device.ztunnel_version }}"
        }
    }
}
{%- do shared.set('record_id', (record_id + 1) % 2147483647) -%}
