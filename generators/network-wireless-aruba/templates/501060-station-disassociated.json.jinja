{%- set controller = params.controller_hostname -%}
{%- set controller_ip = params.controller_ip -%}

{#- Consume from active_clients pool -#}
{%- set pool = shared.get('active_clients', []) -%}
{%- if pool | length > 0 -%}
  {%- set client = pool.pop(0) -%}
  {%- do shared.set('active_clients', pool) -%}
  {%- set client_mac = client.mac -%}
  {%- set client_ip = client.ip -%}
  {%- set ap_name = client.ap_name -%}
  {%- set bssid = client.bssid -%}
  {%- set ssid_name = client.ssid -%}
{%- else -%}
  {#- Fallback: generate standalone disassociation -#}
  {%- set ap = samples.access_points | random -%}
  {%- set ssid = samples.ssids.weighted_pick('weight') -%}
  {%- set client_mac = module.rand.network.mac() -%}
  {%- set client_ip = ssid.network ~ "." ~ module.rand.number.integer(1, 254) ~ "." ~ module.rand.number.integer(2, 254) -%}
  {%- set ap_name = ap.name -%}
  {%- set bssid = ap.mac -%}
  {%- set ssid_name = ssid.name -%}
{%- endif -%}

{#- Disassociation reason -#}
{%- set reason = module.rand.weighted_choice(
  ["Client disassociated", "Inactivity", "AP channel change", "Load balancing", "Client roamed", "Admin disconnect"],
  [35, 20, 10, 10, 20, 5]
) -%}

{#- Syslog message -#}
{%- set msg = "Station mac:" ~ client_mac ~ " disassociated from AP " ~ ap_name ~ " BSSID " ~ bssid ~ " reason: " ~ reason -%}
{%- set pri = 165 -%}

{
  "@timestamp": "{{ timestamp.isoformat() }}",
  "agent": {
    "ephemeral_id": "{{ module.rand.crypto.uuid4() }}",
    "id": "{{ params.agent_id }}",
    "name": "{{ controller }}",
    "type": "filebeat",
    "version": "{{ params.agent_version }}"
  },
  "aruba": {
    "wireless": {
      "ap_name": "{{ ap_name }}",
      "bssid": "{{ bssid }}",
      "client_mac": "{{ client_mac }}",
      "message_id": "501060",
      "process": "stm",
      "reason": "{{ reason }}",
      "ssid": "{{ ssid_name }}"
    }
  },
  "data_stream": {
    "dataset": "aruba.wireless",
    "namespace": "default",
    "type": "logs"
  },
  "ecs": {
    "version": "{{ params.ecs_version }}"
  },
  "event": {
    "action": "station-disassociated",
    "category": ["session", "network"],
    "code": "501060",
    "dataset": "aruba.wireless",
    "kind": "event",
    "module": "aruba",
    "original": "<{{ pri }}>{{ timestamp.strftime('%b %d %H:%M:%S %Y') }} {{ controller }} stm[2367]: <501060> <NOTI> <{{ controller }} {{ controller_ip }}> {{ msg }}",
    "outcome": "success",
    "reason": "{{ reason }}",
    "severity": 5,
    "type": ["end", "connection"]
  },
  "host": {
    "hostname": "{{ controller }}"
  },
  "log": {
    "level": "notice",
    "syslog": {
      "facility": {
        "code": 20,
        "name": "local4"
      },
      "priority": {{ pri }},
      "severity": {
        "code": 5,
        "name": "Notice"
      }
    }
  },
  "observer": {
    "hostname": "{{ controller }}",
    "ip": ["{{ controller_ip }}"],
    "name": "{{ controller }}",
    "product": "ArubaOS",
    "type": "wireless",
    "vendor": "Aruba"
  },
  "related": {
    "hosts": ["{{ controller }}", "{{ ap_name }}"],
    "ip": ["{{ client_ip }}", "{{ controller_ip }}"]
  },
  "source": {
    "ip": "{{ client_ip }}",
    "mac": "{{ client_mac }}"
  },
  "tags": ["aruba-wireless", "forwarded"]
}