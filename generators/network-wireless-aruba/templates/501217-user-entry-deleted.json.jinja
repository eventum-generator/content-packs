{%- set controller = params.controller_hostname -%}
{%- set controller_ip = params.controller_ip -%}

{#- Session ID counter -#}
{%- set session_id = shared.get('session_id', 10000) -%}
{%- do shared.set('session_id', (session_id + 1) % 2147483647) -%}

{#- Read from active_clients pool for correlation -#}
{%- set pool = shared.get('active_clients', []) -%}
{%- if pool | length > 0 -%}
  {%- set client = pool | random -%}
  {%- set client_mac = client.mac -%}
  {%- set client_ip = client.ip -%}
  {%- set username = client.username -%}
{%- else -%}
  {#- Fallback: generate standalone -#}
  {%- set ssid = samples.ssids.weighted_pick('weight') -%}
  {%- set client_mac = module.rand.network.mac() -%}
  {%- set client_ip = ssid.network ~ "." ~ module.rand.number.integer(1, 254) ~ "." ~ module.rand.number.integer(2, 254) -%}
  {%- set username = (samples.usernames | random).username -%}
{%- endif -%}

{#- Syslog message -#}
{%- set msg = "update_ip_mac_role_acl_vlan " ~ session_id ~ ": user entry deleted for " ~ client_ip ~ "-" ~ client_mac -%}
{%- set pri = 165 -%}

{
  "@timestamp": "{{ timestamp.isoformat() }}",
  "agent": {
    "ephemeral_id": "{{ module.rand.crypto.uuid4() }}",
    "id": "{{ params.agent_id }}",
    "name": "{{ controller }}",
    "type": "filebeat",
    "version": "{{ params.agent_version }}"
  },
  "aruba": {
    "wireless": {
      "client_mac": "{{ client_mac }}",
      "message_id": "501217",
      "process": "stm",
      "session_id": {{ session_id }}
    }
  },
  "data_stream": {
    "dataset": "aruba.wireless",
    "namespace": "default",
    "type": "logs"
  },
  "ecs": {
    "version": "{{ params.ecs_version }}"
  },
  "event": {
    "action": "user-entry-deleted",
    "category": ["session"],
    "code": "501217",
    "dataset": "aruba.wireless",
    "kind": "event",
    "module": "aruba",
    "original": "<{{ pri }}>{{ timestamp.strftime('%b %d %H:%M:%S %Y') }} {{ controller }} stm[2367]: <501217> <NOTI> <{{ controller }} {{ controller_ip }}> {{ msg }}",
    "outcome": "success",
    "severity": 5,
    "type": ["end"]
  },
  "host": {
    "hostname": "{{ controller }}"
  },
  "log": {
    "level": "notice",
    "syslog": {
      "facility": {
        "code": 20,
        "name": "local4"
      },
      "priority": {{ pri }},
      "severity": {
        "code": 5,
        "name": "Notice"
      }
    }
  },
  "observer": {
    "hostname": "{{ controller }}",
    "ip": ["{{ controller_ip }}"],
    "name": "{{ controller }}",
    "product": "ArubaOS",
    "type": "wireless",
    "vendor": "Aruba"
  },
  "related": {
    "hosts": ["{{ controller }}"],
    "ip": ["{{ client_ip }}", "{{ controller_ip }}"],
    "user": ["{{ username }}"]
  },
  "source": {
    "ip": "{{ client_ip }}",
    "mac": "{{ client_mac }}",
    "user": {
      "name": "{{ username }}"
    }
  },
  "tags": ["aruba-wireless", "forwarded"],
  "user": {
    "name": "{{ username }}"
  }
}