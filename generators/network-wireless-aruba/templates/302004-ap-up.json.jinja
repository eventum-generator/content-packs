{%- set controller = params.controller_hostname -%}
{%- set controller_ip = params.controller_ip -%}

{#- Pick an AP -#}
{%- set ap = samples.access_points | random -%}

{#- Syslog message -#}
{%- set msg = "AP " ~ ap.name ~ " is up (IP " ~ ap.ip ~ ")" -%}
{%- set pri = 165 -%}

{
  "@timestamp": "{{ timestamp.isoformat() }}",
  "agent": {
    "ephemeral_id": "{{ module.rand.crypto.uuid4() }}",
    "id": "{{ params.agent_id }}",
    "name": "{{ controller }}",
    "type": "filebeat",
    "version": "{{ params.agent_version }}"
  },
  "aruba": {
    "wireless": {
      "ap_ip": "{{ ap.ip }}",
      "ap_mac": "{{ ap.mac }}",
      "ap_name": "{{ ap.name }}",
      "message_id": "302004",
      "process": "sapd"
    }
  },
  "data_stream": {
    "dataset": "aruba.wireless",
    "namespace": "default",
    "type": "logs"
  },
  "ecs": {
    "version": "{{ params.ecs_version }}"
  },
  "event": {
    "action": "ap-up",
    "category": ["host"],
    "code": "302004",
    "dataset": "aruba.wireless",
    "kind": "event",
    "module": "aruba",
    "original": "<{{ pri }}>{{ timestamp.strftime('%b %d %H:%M:%S %Y') }} {{ controller }} sapd[1548]: <302004> <NOTI> <{{ controller }} {{ controller_ip }}> {{ msg }}",
    "outcome": "success",
    "severity": 5,
    "type": ["start"]
  },
  "host": {
    "hostname": "{{ controller }}"
  },
  "log": {
    "level": "notice",
    "syslog": {
      "facility": {
        "code": 20,
        "name": "local4"
      },
      "priority": {{ pri }},
      "severity": {
        "code": 5,
        "name": "Notice"
      }
    }
  },
  "observer": {
    "hostname": "{{ controller }}",
    "ip": ["{{ controller_ip }}"],
    "name": "{{ controller }}",
    "product": "ArubaOS",
    "type": "wireless",
    "vendor": "Aruba"
  },
  "related": {
    "hosts": ["{{ controller }}", "{{ ap.name }}"],
    "ip": ["{{ ap.ip }}", "{{ controller_ip }}"]
  },
  "tags": ["aruba-wireless", "forwarded"]
}