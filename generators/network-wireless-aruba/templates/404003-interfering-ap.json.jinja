{%- set controller = params.controller_hostname -%}
{%- set controller_ip = params.controller_ip -%}

{#- Detecting AP (one of ours) -#}
{%- set detecting_ap = samples.access_points | random -%}

{#- Interfering AP attributes -#}
{%- set interfering_bssid = module.rand.network.mac() -%}
{%- set interfering_ssid = module.rand.weighted_choice(
  ["eduroam", "CityWiFi", "Starbucks-WiFi", "ATT-WiFi", "Marriott_CONFERENCE", "Samsung_Setup", "DIRECT-" ~ module.rand.string.hex(4), "Guest_Network"],
  [15, 15, 15, 10, 10, 10, 15, 10]
) -%}

{#- Channel the interferer is on -#}
{%- set channel = module.rand.choice([1, 6, 11, 36, 40, 44, 48, 52, 149, 153, 157, 161]) -%}

{#- Signal strength (dBm) -#}
{%- set signal = module.rand.number.integer(-85, -45) -%}

{#- Syslog message -#}
{%- set msg = "AM " ~ detecting_ap.mac ~ ": Interfering AP detected with SSID " ~ interfering_ssid ~ " and BSSID " ~ interfering_bssid ~ " on channel " ~ channel -%}
{%- set pri = 164 -%}

{
  "@timestamp": "{{ timestamp.isoformat() }}",
  "agent": {
    "ephemeral_id": "{{ module.rand.crypto.uuid4() }}",
    "id": "{{ params.agent_id }}",
    "name": "{{ controller }}",
    "type": "filebeat",
    "version": "{{ params.agent_version }}"
  },
  "aruba": {
    "wireless": {
      "channel": {{ channel }},
      "detecting_ap_mac": "{{ detecting_ap.mac }}",
      "detecting_ap_name": "{{ detecting_ap.name }}",
      "interfering_bssid": "{{ interfering_bssid }}",
      "interfering_ssid": "{{ interfering_ssid }}",
      "message_id": "404003",
      "process": "sapd",
      "signal_strength": {{ signal }}
    }
  },
  "data_stream": {
    "dataset": "aruba.wireless",
    "namespace": "default",
    "type": "logs"
  },
  "ecs": {
    "version": "{{ params.ecs_version }}"
  },
  "event": {
    "action": "interfering-ap-detected",
    "category": ["network"],
    "code": "404003",
    "dataset": "aruba.wireless",
    "kind": "event",
    "module": "aruba",
    "original": "<{{ pri }}>{{ timestamp.strftime('%b %d %H:%M:%S %Y') }} {{ controller }} sapd[1548]: <404003> <WARN> <{{ controller }} {{ controller_ip }}> {{ msg }}",
    "outcome": "success",
    "severity": 4,
    "type": ["info"]
  },
  "host": {
    "hostname": "{{ controller }}"
  },
  "log": {
    "level": "warning",
    "syslog": {
      "facility": {
        "code": 20,
        "name": "local4"
      },
      "priority": {{ pri }},
      "severity": {
        "code": 4,
        "name": "Warning"
      }
    }
  },
  "observer": {
    "hostname": "{{ controller }}",
    "ip": ["{{ controller_ip }}"],
    "name": "{{ controller }}",
    "product": "ArubaOS",
    "type": "wireless",
    "vendor": "Aruba"
  },
  "related": {
    "hosts": ["{{ controller }}", "{{ detecting_ap.name }}"]
  },
  "tags": ["aruba-wireless", "forwarded"]
}