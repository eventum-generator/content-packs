{%- set controller = params.controller_hostname -%}
{%- set controller_ip = params.controller_ip -%}

{#- Read from active_clients pool for correlation -#}
{%- set pool = shared.get('active_clients', []) -%}
{%- if pool | length > 0 -%}
  {%- set client = pool | random -%}
  {%- set client_mac = client.mac -%}
  {%- set client_ip = client.ip -%}
  {%- set username = client.username -%}
  {%- set role = client.role -%}
  {%- set auth_method = client.auth_method -%}
{%- else -%}
  {#- Fallback: generate standalone -#}
  {%- set ssid = samples.ssids.weighted_pick('weight') -%}
  {%- set user = (samples.usernames | random) -%}
  {%- set client_mac = module.rand.network.mac() -%}
  {%- set client_ip = ssid.network ~ "." ~ module.rand.number.integer(1, 254) ~ "." ~ module.rand.number.integer(2, 254) -%}
  {%- set username = user.username -%}
  {%- set role = ssid.role -%}
  {%- set auth_method = ssid.auth_method -%}
{%- endif -%}

{#- Syslog message -#}
{%- set msg = "User authenticated, mac-" ~ client_mac ~ ", username-" ~ username ~ ", IP-" ~ client_ip ~ ", method-" ~ auth_method ~ ", role-" ~ role -%}
{%- set pri = 165 -%}

{
  "@timestamp": "{{ timestamp.isoformat() }}",
  "agent": {
    "ephemeral_id": "{{ module.rand.crypto.uuid4() }}",
    "id": "{{ params.agent_id }}",
    "name": "{{ controller }}",
    "type": "filebeat",
    "version": "{{ params.agent_version }}"
  },
  "aruba": {
    "wireless": {
      "auth_method": "{{ auth_method }}",
      "client_mac": "{{ client_mac }}",
      "message_id": "501199",
      "process": "stm",
      "role": "{{ role }}"
    }
  },
  "data_stream": {
    "dataset": "aruba.wireless",
    "namespace": "default",
    "type": "logs"
  },
  "ecs": {
    "version": "{{ params.ecs_version }}"
  },
  "event": {
    "action": "user-authenticated",
    "category": ["authentication"],
    "code": "501199",
    "dataset": "aruba.wireless",
    "kind": "event",
    "module": "aruba",
    "original": "<{{ pri }}>{{ timestamp.strftime('%b %d %H:%M:%S %Y') }} {{ controller }} stm[2367]: <501199> <NOTI> <{{ controller }} {{ controller_ip }}> {{ msg }}",
    "outcome": "success",
    "severity": 5,
    "type": ["start"]
  },
  "host": {
    "hostname": "{{ controller }}"
  },
  "log": {
    "level": "notice",
    "syslog": {
      "facility": {
        "code": 20,
        "name": "local4"
      },
      "priority": {{ pri }},
      "severity": {
        "code": 5,
        "name": "Notice"
      }
    }
  },
  "observer": {
    "hostname": "{{ controller }}",
    "ip": ["{{ controller_ip }}"],
    "name": "{{ controller }}",
    "product": "ArubaOS",
    "type": "wireless",
    "vendor": "Aruba"
  },
  "related": {
    "hosts": ["{{ controller }}"],
    "ip": ["{{ client_ip }}", "{{ controller_ip }}"],
    "user": ["{{ username }}"]
  },
  "source": {
    "ip": "{{ client_ip }}",
    "mac": "{{ client_mac }}",
    "user": {
      "name": "{{ username }}"
    }
  },
  "tags": ["aruba-wireless", "forwarded"],
  "user": {
    "name": "{{ username }}",
    "roles": ["{{ role }}"]
  }
}