{%- set controller = params.controller_hostname -%}
{%- set controller_ip = params.controller_ip -%}

{#- Read from active_clients pool for correlation -#}
{%- set pool = shared.get('active_clients', []) -%}
{%- if pool | length > 0 -%}
  {%- set client = pool | random -%}
  {%- set client_mac = client.mac -%}
  {%- set client_ip = client.ip -%}
  {%- set username = client.username -%}
  {%- set ap_name = client.ap_name -%}
{%- else -%}
  {#- Fallback: generate standalone -#}
  {%- set ap = samples.access_points | random -%}
  {%- set client_mac = module.rand.network.mac() -%}
  {%- set ssid = samples.ssids.weighted_pick('weight') -%}
  {%- set client_ip = ssid.network ~ "." ~ module.rand.number.integer(1, 254) ~ "." ~ module.rand.number.integer(2, 254) -%}
  {%- set username = (samples.usernames | random).username -%}
  {%- set ap_name = ap.name -%}
{%- endif -%}

{#- Deauth reason -#}
{%- set reason = module.rand.weighted_choice(
  ["Client initiated", "Idle timeout", "Session timeout", "RADIUS disconnect", "Admin action", "AP handoff", "Authentication failure"],
  [30, 25, 15, 10, 5, 10, 5]
) -%}

{#- Syslog message -#}
{%- set msg = "Station mac:" ~ client_mac ~ " de-authenticated: reason " ~ reason -%}
{%- set pri = 165 -%}

{
  "@timestamp": "{{ timestamp.isoformat() }}",
  "agent": {
    "ephemeral_id": "{{ module.rand.crypto.uuid4() }}",
    "id": "{{ params.agent_id }}",
    "name": "{{ controller }}",
    "type": "filebeat",
    "version": "{{ params.agent_version }}"
  },
  "aruba": {
    "wireless": {
      "client_mac": "{{ client_mac }}",
      "message_id": "501080",
      "process": "stm",
      "reason": "{{ reason }}"
    }
  },
  "data_stream": {
    "dataset": "aruba.wireless",
    "namespace": "default",
    "type": "logs"
  },
  "ecs": {
    "version": "{{ params.ecs_version }}"
  },
  "event": {
    "action": "user-de-authenticated",
    "category": ["authentication"],
    "code": "501080",
    "dataset": "aruba.wireless",
    "kind": "event",
    "module": "aruba",
    "original": "<{{ pri }}>{{ timestamp.strftime('%b %d %H:%M:%S %Y') }} {{ controller }} stm[2367]: <501080> <NOTI> <{{ controller }} {{ controller_ip }}> {{ msg }}",
    "outcome": "success",
    "reason": "{{ reason }}",
    "severity": 5,
    "type": ["end"]
  },
  "host": {
    "hostname": "{{ controller }}"
  },
  "log": {
    "level": "notice",
    "syslog": {
      "facility": {
        "code": 20,
        "name": "local4"
      },
      "priority": {{ pri }},
      "severity": {
        "code": 5,
        "name": "Notice"
      }
    }
  },
  "observer": {
    "hostname": "{{ controller }}",
    "ip": ["{{ controller_ip }}"],
    "name": "{{ controller }}",
    "product": "ArubaOS",
    "type": "wireless",
    "vendor": "Aruba"
  },
  "related": {
    "hosts": ["{{ controller }}"],
    "ip": ["{{ client_ip }}", "{{ controller_ip }}"],
    "user": ["{{ username }}"]
  },
  "source": {
    "ip": "{{ client_ip }}",
    "mac": "{{ client_mac }}",
    "user": {
      "name": "{{ username }}"
    }
  },
  "tags": ["aruba-wireless", "forwarded"],
  "user": {
    "name": "{{ username }}"
  }
}