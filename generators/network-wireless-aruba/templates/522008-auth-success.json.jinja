{%- set controller = params.controller_hostname -%}
{%- set controller_ip = params.controller_ip -%}

{#- RADIUS server selection -#}
{%- set radius = module.rand.weighted_choice(
  [{"ip": "10.1.1.100", "name": "RADIUS-Primary"}, {"ip": "10.1.1.101", "name": "RADIUS-Secondary"}],
  [80, 20]
) -%}

{#- Try to correlate with an active client session -#}
{%- set pool = shared.get('active_clients', []) -%}
{%- if pool | length > 0 -%}
  {%- set client = pool | random -%}
  {%- set client_mac = client.mac -%}
  {%- set client_ip = client.ip -%}
  {%- set username = client.username -%}
  {%- set ap_name = client.ap_name -%}
  {%- set bssid = client.bssid -%}
  {%- set ssid_name = client.ssid -%}
  {%- set vlan_id = client.vlan_id -%}
  {%- set role = client.role -%}
  {%- set auth_method = client.auth_method -%}
  {%- set aaa_profile = client.aaa_profile -%}
{%- else -%}
  {#- Fallback: generate standalone auth event -#}
  {%- set ssid = samples.ssids.weighted_pick('weight') -%}
  {%- set ap = samples.access_points | random -%}
  {%- set user = (samples.usernames | random) -%}
  {%- set client_mac = module.rand.network.mac() -%}
  {%- set client_ip = ssid.network ~ "." ~ module.rand.number.integer(1, 254) ~ "." ~ module.rand.number.integer(2, 254) -%}
  {%- set username = user.username -%}
  {%- set ap_name = ap.name -%}
  {%- set bssid = ap.mac -%}
  {%- set ssid_name = ssid.name -%}
  {%- set vlan_id = ssid.vlan_id -%}
  {%- set role = ssid.role -%}
  {%- set auth_method = ssid.auth_method -%}
  {%- set aaa_profile = ssid.aaa_profile -%}
{%- endif -%}

{#- Syslog message -#}
{%- set msg = "User Authentication Successful: username=" ~ username ~ " MAC=" ~ client_mac ~ " IP=" ~ client_ip ~ " role=" ~ role ~ " VLAN=" ~ vlan_id ~ " AP=" ~ ap_name ~ " SSID=" ~ ssid_name ~ " AAA profile=" ~ aaa_profile ~ " auth method=" ~ auth_method ~ " auth server=" ~ radius.name -%}
{%- set pri = 165 -%}

{
  "@timestamp": "{{ timestamp.isoformat() }}",
  "agent": {
    "ephemeral_id": "{{ module.rand.crypto.uuid4() }}",
    "id": "{{ params.agent_id }}",
    "name": "{{ controller }}",
    "type": "filebeat",
    "version": "{{ params.agent_version }}"
  },
  "aruba": {
    "wireless": {
      "aaa_profile": "{{ aaa_profile }}",
      "ap_name": "{{ ap_name }}",
      "auth_method": "{{ auth_method }}",
      "auth_server": "{{ radius.name }}",
      "bssid": "{{ bssid }}",
      "client_mac": "{{ client_mac }}",
      "message_id": "522008",
      "process": "authmgr",
      "role": "{{ role }}",
      "ssid": "{{ ssid_name }}",
      "vlan": {{ vlan_id }}
    }
  },
  "data_stream": {
    "dataset": "aruba.wireless",
    "namespace": "default",
    "type": "logs"
  },
  "destination": {
    "address": "{{ radius.ip }}",
    "ip": "{{ radius.ip }}"
  },
  "ecs": {
    "version": "{{ params.ecs_version }}"
  },
  "event": {
    "action": "user-authentication-successful",
    "category": ["authentication"],
    "code": "522008",
    "dataset": "aruba.wireless",
    "kind": "event",
    "module": "aruba",
    "original": "<{{ pri }}>{{ timestamp.strftime('%b %d %H:%M:%S %Y') }} {{ controller }} authmgr[3469]: <522008> <NOTI> <{{ controller }} {{ controller_ip }}> {{ msg }}",
    "outcome": "success",
    "severity": 5,
    "type": ["start"]
  },
  "host": {
    "hostname": "{{ controller }}"
  },
  "log": {
    "level": "notice",
    "syslog": {
      "facility": {
        "code": 20,
        "name": "local4"
      },
      "priority": {{ pri }},
      "severity": {
        "code": 5,
        "name": "Notice"
      }
    }
  },
  "network": {
    "vlan": {
      "id": "{{ vlan_id }}"
    }
  },
  "observer": {
    "hostname": "{{ controller }}",
    "ip": ["{{ controller_ip }}"],
    "name": "{{ controller }}",
    "product": "ArubaOS",
    "type": "wireless",
    "vendor": "Aruba"
  },
  "related": {
    "hosts": ["{{ controller }}", "{{ ap_name }}"],
    "ip": ["{{ client_ip }}", "{{ radius.ip }}", "{{ controller_ip }}"],
    "user": ["{{ username }}"]
  },
  "source": {
    "ip": "{{ client_ip }}",
    "mac": "{{ client_mac }}",
    "user": {
      "name": "{{ username }}"
    }
  },
  "tags": ["aruba-wireless", "forwarded"],
  "user": {
    "name": "{{ username }}"
  }
}