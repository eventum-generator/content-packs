{#- RECEIVE event â€” Internal message received from mailbox via STOREDRIVER.
     This is a PRODUCER template: pushes message context to shared pool. -#}
{%- set seq = shared.get('internal_message_id_seq', 34359738368) -%}
{%- set log_seq = shared.get('log_id_seq', 1000) -%}
{%- set fqdn = params.hostname ~ '.' ~ params.domain -%}

{#- Internal sender -#}
{%- set sender = samples.internal_users.pick() -%}
{%- set sender_email = sender.username ~ '@' ~ params.domain -%}
{%- set sender_name = sender.username -%}

{#- Recipient: mostly internal, 20% chance of external -#}
{%- set is_outbound = module.rand.chance(0.2) -%}
{%- if is_outbound -%}
  {%- set ext = samples.external_domains.weighted_pick('weight') -%}
  {%- set recipient_user = module.faker.locale.en_US.user_name() -%}
  {%- set recipient_email = recipient_user ~ '@' ~ ext.domain -%}
  {%- set recipient_name = recipient_user -%}
  {%- set recipient_domain = ext.domain -%}
  {%- set directionality = "Originating" -%}
  {%- set email_direction = "outbound" -%}
{%- else -%}
  {%- set rcpt = samples.internal_users.pick() -%}
  {%- set recipient_email = rcpt.username ~ '@' ~ params.domain -%}
  {%- set recipient_name = rcpt.username -%}
  {%- set recipient_domain = params.domain -%}
  {%- set directionality = "Originating" -%}
  {%- set email_direction = "internal" -%}
{%- endif -%}

{%- set recipient_count = 1 -%}
{%- if module.rand.chance(0.15) -%}
  {%- set recipient_count = module.rand.number.integer(2, 8) -%}
{%- endif -%}

{#- Message metadata -#}
{%- set msg_id = '<' ~ (module.rand.crypto.uuid4() | replace("-", "")) ~ '@' ~ fqdn ~ '>' -%}
{%- set network_msg_id = module.rand.crypto.uuid4() -%}
{%- set total_bytes = module.rand.number.clamp(module.rand.number.lognormal(10.2, 1.4) | int, 800, 25000000) -%}
{%- set log_id = module.rand.crypto.uuid4() -%}

{#- Subject -#}
{%- set subject_cat = module.rand.weighted_choice(["business", "automated"], [70, 30]) -%}
{%- set subject = (samples.subjects | selectattr("category", "equalto", subject_cat) | list | random).text -%}

{#- STOREDRIVER context -#}
{%- set source_context = 'MapiSubmission;MailboxTransportSubmissionService - ' ~ fqdn -%}
{
    "@timestamp": "{{ timestamp.isoformat() }}",
    "agent": {
        "ephemeral_id": "{{ module.rand.crypto.uuid4() }}",
        "id": "{{ params.agent_id }}",
        "name": "{{ params.hostname }}",
        "type": "filebeat",
        "version": "{{ params.agent_version }}"
    },
    "destination": {
        "domain": "{{ recipient_domain }}",
        "ip": "{{ params.server_ip }}",
        "user": {
            "email": "{{ recipient_email }}",
            "name": "{{ recipient_name }}"
        }
    },
    "ecs": {
        "version": "{{ params.ecs_version }}"
    },
    "email": {
        "direction": "{{ email_direction }}",
        "delivery_timestamp": "{{ timestamp.isoformat() }}",
        "from": {
            "address": ["{{ sender_email }}"]
        },
        "local_id": "{{ network_msg_id }}",
        "message_id": "{{ msg_id }}",
        "subject": "{{ subject }}",
        "to": {
            "address": ["{{ recipient_email }}"]
        },
        "attachments": {
            "file": {
                "size": {{ total_bytes }}
            }
        }
    },
    "event": {
        "action": "receive",
        "category": ["email"],
        "dataset": "microsoft_exchange.messagetracking",
        "kind": "event",
        "module": "microsoft_exchange",
        "outcome": "success",
        "type": ["info"]
    },
    "microsoft_exchange": {
        "messagetracking": {
            "client_ip": "{{ params.server_ip }}",
            "client_hostname": "{{ fqdn }}",
            "server_ip": "{{ params.server_ip }}",
            "server_hostname": "{{ fqdn }}",
            "source_context": "{{ source_context }}",
            "connector_id": "",
            "source": "STOREDRIVER",
            "event_id": "RECEIVE",
            "internal_message_id": {{ seq }},
            "network_message_id": "{{ network_msg_id }}",
            "recipient_status": "250 2.1.5 Recipient OK",
            "recipient_count": {{ recipient_count }},
            "related_recipient_address": "",
            "reference": "",
            "return_path": "{{ sender_email }}",
            "message_info": "",
            "directionality": "{{ directionality }}",
            "original_client_ip": "{{ params.server_ip }}",
            "original_server_ip": "{{ params.server_ip }}",
            "custom_data": "{{ 'S:DeliveryPriority=Normal;S:AccountForest=' ~ params.domain }}",
            "transport_traffic_type": "Email",
            "log_id": "{{ log_id }}",
            "schema_version": "{{ params.schema_version }}"
        }
    },
    "observer": {
        "hostname": "{{ fqdn }}",
        "ip": ["{{ params.server_ip }}"],
        "product": "Exchange Server",
        "type": "mail",
        "vendor": "Microsoft",
        "version": "{{ params.schema_version }}"
    },
    "related": {
        "ip": ["{{ params.server_ip }}"],
        "user": ["{{ sender_name }}", "{{ recipient_name }}"]
    },
    "source": {
        "domain": "{{ params.domain }}",
        "ip": "{{ params.server_ip }}",
        "user": {
            "email": "{{ sender_email }}",
            "name": "{{ sender_name }}"
        }
    },
    "tags": ["microsoft-exchange", "forwarded"]
}
{#- Push message context to shared pool -#}
{%- set pool = shared.get('message_pool', []) -%}
{%- do pool.append({
    "message_id": msg_id,
    "network_message_id": network_msg_id,
    "sender_email": sender_email,
    "sender_name": sender_name,
    "sender_domain": params.domain,
    "recipient_email": recipient_email,
    "recipient_name": recipient_name,
    "subject": subject,
    "total_bytes": total_bytes,
    "directionality": directionality,
    "client_ip": params.server_ip,
    "client_hostname": fqdn,
    "recipient_count": recipient_count
}) -%}
{%- if pool | length > (params.get('max_message_pool', 80) | int) -%}{%- do pool.pop(0) -%}{%- endif -%}
{%- do shared.set('message_pool', pool) -%}
{%- do shared.set('internal_message_id_seq', (seq + 1) % 2147483647) -%}
{%- do shared.set('log_id_seq', (log_seq + 1) % 2147483647) -%}
