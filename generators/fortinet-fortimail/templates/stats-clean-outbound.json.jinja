{%- set session_seq = shared.get('session_seq', 1000) -%}
{%- set stats_log_seq = shared.get('stats_log_seq', 4500) -%}
{#- Session ID -#}
{%- set pfx = module.rand.string.letters(7) -%}
{%- set c1 = module.rand.choice("abcdefghijkmnpqrstuvwxyz") -%}
{%- set c2 = module.rand.choice("bcdefghjkmnpqrstuvwxyz") -%}
{%- set seq_str = ("000000" ~ (session_seq | string))[-6:] -%}
{%- set session_id = pfx ~ c1 ~ seq_str ~ "-" ~ pfx ~ c2 ~ seq_str -%}
{%- set log_id = "02" ~ ("00000000" ~ (stats_log_seq | string))[-8:] -%}
{#- Internal sender -#}
{%- set sender = (samples.internal_users | random).username -%}
{%- set sender_email = sender ~ "@" ~ params.domain -%}
{#- External recipient -#}
{%- set srv_items = [] -%}
{%- set srv_weights = [] -%}
{%- for srv in samples.mail_servers -%}
  {%- do srv_items.append(srv) -%}
  {%- do srv_weights.append(srv.weight) -%}
{%- endfor -%}
{%- set server = module.rand.weighted_choice(srv_items, srv_weights) -%}
{%- set recipient_user = module.faker.locale.en_US.user_name() -%}
{%- set recipient_email = recipient_user ~ "@" ~ server.domain -%}
{#- Subject -#}
{%- set subject_cat = module.rand.weighted_choice(["business", "automated"], [60, 40]) -%}
{%- set subject = (samples.subjects | selectattr("category", "equalto", subject_cat) | list | random).text -%}
{#- Client info (internal MTA) -#}
{%- set client_ip = params.device_ip -%}
{%- set client_name = "" -%}
{#- Classification -#}
{%- set classifier = module.rand.weighted_choice(["Not Spam", "Bypass Scan On Auth"], [60, 40]) -%}
{%- set mailer = module.rand.weighted_choice(["mta", "proxy"], [80, 20]) -%}
{%- set polid = module.rand.weighted_choice(["0:1:0", "2:2:5:SYSTEM", "1:1:2:SYSTEM"], [30, 40, 30]) -%}
{#- Metrics -#}
{%- set message_length = module.rand.number.integer(1000, 200000) -%}
{%- set scan_time = module.rand.number.floating(0.003, 0.15) | round(6) -%}
{%- set xfer_time = module.rand.number.floating(0.001, 0.06) | round(6) -%}
{%- set message_id = module.rand.string.digits(9) ~ "." ~ module.rand.string.digits(6) ~ "." ~ module.rand.string.digits(4) ~ "@" ~ params.domain -%}
{%- set dst_ip = module.rand.network.ip_v4_public() -%}
{
    "@timestamp": "{{ timestamp.isoformat() }}",
    "agent": {
        "ephemeral_id": "{{ module.rand.crypto.uuid4() }}",
        "id": "{{ params.agent_id }}",
        "name": "{{ params.hostname }}",
        "type": "filebeat",
        "version": "{{ params.agent_version }}"
    },
    "destination": {
        "ip": "{{ dst_ip }}"
    },
    "ecs": {
        "version": "8.17.0"
    },
    "email": {
        "direction": "out",
        "from": {
            "address": ["{{ sender_email }}"]
        },
        "subject": "{{ subject }}",
        "to": {
            "address": ["{{ recipient_email }}"]
        },
        "x_mailer": "{{ mailer }}"
    },
    "event": {
        "code": "{{ log_id }}",
        "dataset": "fortinet_fortimail.log",
        "kind": "event",
        "module": "fortinet_fortimail",
        "outcome": "success"
    },
    "fortinet_fortimail": {
        "log": {
            "classifier": "{{ classifier }}",
            "client": {
                "cc": "",
                "ip": "{{ client_ip }}",
                "name": "{{ client_name }}"
            },
            "destination_ip": "{{ dst_ip }}",
            "direction": "out",
            "disposition": "Accept",
            "domain": "",
            "from": "{{ sender_email }}",
            "hfrom": "{{ sender_email }}",
            "id": "{{ log_id }}",
            "message_id": "{{ message_id }}",
            "message_length": {{ message_length }},
            "notif_delay": "0",
            "policy_id": "{{ polid }}",
            "priority": "information",
            "read_status": "",
            "recv_time": "",
            "resolved": "OK",
            "scan_time": {{ scan_time }},
            "session_id": "{{ session_id }}",
            "source": {
                "folder": "",
                "type": "int"
            },
            "sub_type": "",
            "subject": "{{ subject }}",
            "to": "{{ recipient_email }}",
            "type": "statistics",
            "virus": "",
            "xfer_time": {{ xfer_time }}
        }
    },
    "log": {
        "level": "information",
        "syslog": {
            "priority": 190
        }
    },
    "observer": {
        "product": "FortiMail",
        "serial_number": "{{ params.device_id }}",
        "type": "firewall",
        "vendor": "Fortinet"
    },
    "related": {
        "ip": ["{{ client_ip }}", "{{ dst_ip }}"],
        "user": ["{{ sender_email }}", "{{ recipient_email }}"]
    },
    "source": {
        "ip": "{{ client_ip }}",
        "user": {
            "name": "{{ client_name }}"
        }
    },
    "tags": ["fortinet-fortimail", "forwarded"]
}
{%- do shared.set('session_seq', session_seq + 1) -%}
{%- do shared.set('stats_log_seq', stats_log_seq + 1) -%}
