{%- set session_seq = shared.get('session_seq', 1000) -%}
{%- set virus_log_seq = shared.get('virus_log_seq', 900) -%}
{#- Session ID -#}
{%- set pfx = module.rand.string.letters(7) -%}
{%- set c1 = module.rand.choice("abcdefghijkmnpqrstuvwxyz") -%}
{%- set c2 = module.rand.choice("bcdefghjkmnpqrstuvwxyz") -%}
{%- set seq_str = ("000000" ~ (session_seq | string))[-6:] -%}
{%- set session_id = pfx ~ c1 ~ seq_str ~ "-" ~ pfx ~ c2 ~ seq_str -%}
{%- set log_id = "0100" ~ ("000000" ~ (virus_log_seq | string))[-6:] -%}
{#- Email details -#}
{%- set sender_email = module.faker.locale.en_US.email() -%}
{%- set recipient = (samples.internal_users | random).username -%}
{%- set recipient_email = recipient ~ "@" ~ params.domain -%}
{%- set src_ip = module.rand.network.ip_v4_public() -%}
{#- Virus info -#}
{%- set virus = samples.viruses | random -%}
{%- set msg = "The file " ~ virus.file ~ " is infected with " ~ virus.name ~ "." -%}
{
    "@timestamp": "{{ timestamp.isoformat() }}",
    "agent": {
        "ephemeral_id": "{{ module.rand.crypto.uuid4() }}",
        "id": "{{ params.agent_id }}",
        "name": "{{ params.hostname }}",
        "type": "filebeat",
        "version": "{{ params.agent_version }}"
    },
    "ecs": {
        "version": "8.17.0"
    },
    "email": {
        "from": {
            "address": ["{{ sender_email }}"]
        },
        "to": {
            "address": ["{{ recipient_email }}"]
        }
    },
    "event": {
        "code": "{{ log_id }}",
        "dataset": "fortinet_fortimail.log",
        "kind": "event",
        "module": "fortinet_fortimail"
    },
    "fortinet_fortimail": {
        "log": {
            "from": "{{ sender_email }}",
            "id": "{{ log_id }}",
            "message": "{{ msg }}",
            "priority": "information",
            "session_id": "{{ session_id }}",
            "source": {
                "ip": "{{ src_ip }}"
            },
            "sub_type": "infected",
            "to": "{{ recipient_email }}",
            "type": "virus",
            "virus": "{{ virus.name }}"
        }
    },
    "log": {
        "level": "information",
        "syslog": {
            "priority": 190
        }
    },
    "message": "{{ msg }}",
    "observer": {
        "product": "FortiMail",
        "serial_number": "{{ params.device_id }}",
        "type": "firewall",
        "vendor": "Fortinet"
    },
    "related": {
        "ip": ["{{ src_ip }}"],
        "user": ["{{ sender_email }}", "{{ recipient_email }}"]
    },
    "source": {
        "ip": "{{ src_ip }}"
    },
    "tags": ["fortinet-fortimail", "forwarded"]
}
{%- do shared.set('session_seq', session_seq + 1) -%}
{%- do shared.set('virus_log_seq', virus_log_seq + 1) -%}
