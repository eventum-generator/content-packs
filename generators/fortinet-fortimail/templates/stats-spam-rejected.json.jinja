{%- set session_seq = shared.get('session_seq', 1000) -%}
{%- set stats_log_seq = shared.get('stats_log_seq', 4500) -%}
{#- Session ID -#}
{%- set pfx = module.rand.string.letters(7) -%}
{%- set c1 = module.rand.choice("abcdefghijkmnpqrstuvwxyz") -%}
{%- set c2 = module.rand.choice("bcdefghjkmnpqrstuvwxyz") -%}
{%- set seq_str = ("000000" ~ (session_seq | string))[-6:] -%}
{%- set session_id = pfx ~ c1 ~ seq_str ~ "-" ~ pfx ~ c2 ~ seq_str -%}
{%- set log_id = "02" ~ ("00000000" ~ (stats_log_seq | string))[-8:] -%}
{#- Spam sender (random email) -#}
{%- set sender_email = module.faker.locale.en_US.email() -%}
{#- Internal recipient -#}
{%- set recipient = (samples.internal_users | random).username -%}
{%- set recipient_email = recipient ~ "@" ~ params.domain -%}
{#- Subject (spam or phishing) -#}
{%- set subject_cat = module.rand.weighted_choice(["spam", "phishing"], [70, 30]) -%}
{%- set subject = (samples.subjects | selectattr("category", "equalto", subject_cat) | list | random).text -%}
{#- Client info (external, suspicious) -#}
{%- set client_ip = module.rand.network.ip_v4_public() -%}
{%- set client_name = "[" ~ client_ip ~ "]" -%}
{%- set client_cc = module.rand.weighted_choice(["US", "CN", "RU", "UA", "BR", "IN", "NG", "VN", "KR", "DE"], [15, 15, 12, 10, 8, 8, 7, 7, 5, 3]) -%}
{#- Classification -#}
{%- set classifier = module.rand.weighted_choice(["FortiGuard AntiSpam", "DNSBL (RBL)", "FortiGuard Phishing", "Heuristic", "Banned Word", "SURBL", "FortiGuard AntiSpam Black IP", "Sender Reputation"], [30, 20, 15, 10, 8, 7, 5, 5]) -%}
{%- set disposition = module.rand.weighted_choice(["Reject", "Discard"], [70, 30]) -%}
{%- set mailer = "mta" -%}
{%- set polid = module.rand.weighted_choice(["0:1:1:SYSTEM", "1:1:2:SYSTEM", "3:1:5:SYSTEM"], [40, 35, 25]) -%}
{#- Metrics -#}
{%- set message_length = module.rand.number.integer(500, 8000) -%}
{%- set scan_time = module.rand.number.floating(0.02, 0.8) | round(6) -%}
{%- set xfer_time = module.rand.number.floating(0.001, 0.03) | round(6) -%}
{%- set message_id = module.rand.string.hex(12) ~ "@" ~ module.faker.locale.en_US.domain_name() -%}
{%- set tld = params.domain.split(".")[-1] -%}
{#- Store session info for spam-detection correlation -#}
{%- set spam_pool = shared.get('spam_sessions', []) -%}
{%- do spam_pool.append({"session_id": session_id, "from": sender_email, "to": recipient_email, "subject": subject, "client_ip": client_ip, "client_name": client_name, "dst_ip": params.device_ip, "classifier": classifier}) -%}
{%- if spam_pool | length > 50 -%}{%- do spam_pool.pop(0) -%}{%- endif -%}
{%- do shared.set('spam_sessions', spam_pool) -%}
