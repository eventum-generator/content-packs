{%- set hostname = params.hostname -%}
{%- set fqdn = hostname ~ '.' ~ params.domain -%}
{#- RT_FLOW_SESSION_CREATE â€” session permitted and established -#}
{%- set direction_type = module.rand.weighted_choice(["outbound", "inbound", "internal"], [60, 25, 15]) -%}
{#- Pick a service with weighted distribution -#}
{%- set service = samples.network_services.weighted_pick('weight') -%}
{#- Pick a permit policy -#}
{%- set permit_policies = [] -%}
{%- set permit_weights = [] -%}
{%- for pol in samples.security_policies -%}
  {%- if pol.action == "permit" -%}
    {%- do permit_policies.append(pol) -%}
    {%- do permit_weights.append(pol.weight) -%}
  {%- endif -%}
{%- endfor -%}
{%- set policy = module.rand.weighted_choice(permit_policies, permit_weights) -%}
{#- Generate IPs based on direction -#}
{%- set src_host = samples.internal_hosts | random -%}
{%- if direction_type == "outbound" -%}
  {%- set src_ip = src_host.ip -%}
  {%- set src_port = module.rand.number.integer(49152, 65535) -%}
  {%- set dst_ip = module.rand.network.ip_v4_public() -%}
  {%- set dst_port = service.port -%}
  {%- set ingress_zone = "trust" -%}
  {%- set egress_zone = "untrust" -%}
  {%- set ingress_iface = "ge-0/0/1.0" -%}
{%- elif direction_type == "inbound" -%}
  {%- set src_ip = module.rand.network.ip_v4_public() -%}
  {%- set src_port = module.rand.number.integer(49152, 65535) -%}
  {%- set dmz_host = samples.internal_hosts | selectattr("subnet", "equalto", "dmz") | list | random -%}
  {%- set dst_ip = dmz_host.ip -%}
  {%- set dst_port = service.port -%}
  {%- set ingress_zone = "untrust" -%}
  {%- set egress_zone = "dmz" -%}
  {%- set ingress_iface = "ge-0/0/0.0" -%}
{%- else -%}
  {%- set src_ip = src_host.ip -%}
  {%- set src_port = module.rand.number.integer(49152, 65535) -%}
  {%- set srv_host = samples.internal_hosts | selectattr("subnet", "equalto", "servers") | list | random -%}
  {%- set dst_ip = srv_host.ip -%}
  {%- set dst_port = service.port -%}
  {%- set ingress_zone = "trust" -%}
  {%- set egress_zone = "trust" -%}
  {%- set ingress_iface = "ge-0/0/1.0" -%}
{%- endif -%}
{%- set session_id = module.rand.number.integer(100000, 9999999) -%}
{#- NAT for outbound traffic -#}
{%- set has_nat = direction_type == "outbound" and module.rand.chance(0.7) -%}
{%- if has_nat -%}
  {%- set nat_src_ip = params.get("nat_ip", "198.51.100.1") -%}
  {%- set nat_src_port = module.rand.number.integer(10000, 60000) -%}
  {%- set nat_rule = "source-nat-rule" -%}
{%- else -%}
  {%- set nat_src_ip = src_ip -%}
  {%- set nat_src_port = src_port -%}
  {%- set nat_rule = "None" -%}
{%- endif -%}
{#- Store session for correlation with session-close -#}
{%- set active_sessions = shared.get('active_sessions', []) -%}
{%- set session_entry = {"session_id": session_id, "src_ip": src_ip, "src_port": src_port, "dst_ip": dst_ip, "dst_port": dst_port, "protocol_id": service.protocol_id, "transport": service.transport, "application": service.application, "service_name": service.name, "policy_name": policy.name, "ingress_zone": ingress_zone, "egress_zone": egress_zone, "ingress_iface": ingress_iface, "direction": direction_type, "has_nat": has_nat, "nat_src_ip": nat_src_ip, "nat_src_port": nat_src_port, "nat_rule": nat_rule} -%}
{%- do active_sessions.append(session_entry) -%}
{%- if active_sessions | length > 100 -%}{%- do active_sessions.pop(0) -%}{%- endif -%}
{%- do shared.set('active_sessions', active_sessions) -%}
{
    "@timestamp": "{{ timestamp.isoformat() }}",
    "agent": {
        "ephemeral_id": "{{ module.rand.crypto.uuid4() }}",
        "id": "{{ params.agent_id }}",
        "name": "{{ fqdn }}",
        "type": "filebeat",
        "version": "{{ params.agent_version }}"
    },
    "destination": {
        "ip": "{{ dst_ip }}",
{%- if has_nat %}
        "nat": {
            "ip": "{{ dst_ip }}",
            "port": {{ dst_port }}
        },
{%- endif %}
        "port": {{ dst_port }}
    },
    "ecs": {
        "version": "8.17.0"
    },
    "event": {
        "action": "flow_started",
        "category": ["network"],
        "dataset": "juniper_srx.log",
        "kind": "event",
        "module": "juniper_srx",
        "outcome": "success",
        "severity": 14,
        "type": ["start", "allowed", "connection"]
    },
    "host": {
        "name": "{{ hostname }}"
    },
    "juniper": {
        "srx": {
            "connection_tag": "0",
            "dst_nat_rule_name": "None",
            "nat_connection_tag": "0",
            "process": "RT_FLOW",
            "roles": "N/A",
            "service_name": "{{ service.name }}",
            "session_id_32": "{{ session_id }}",
{%- if has_nat %}
            "src_nat_rule_name": "{{ nat_rule }}",
            "src_nat_rule_type": "source rule",
{%- else %}
            "src_nat_rule_name": "None",
{%- endif %}
            "tag": "RT_FLOW_SESSION_CREATE",
            "username": "N/A"
        }
    },
    "log": {
        "level": "informational"
    },
    "network": {
        "iana_number": "{{ service.protocol_id }}",
        "transport": "{{ service.transport }}"
    },
    "observer": {
        "egress": {
            "zone": "{{ egress_zone }}"
        },
        "ingress": {
            "interface": {
                "name": "{{ ingress_iface }}"
            },
            "zone": "{{ ingress_zone }}"
        },
        "name": "{{ fqdn }}",
        "product": "SRX",
        "type": "firewall",
        "vendor": "Juniper"
    },
    "process": {
        "name": "RT_FLOW"
    },
    "related": {
        "ip": ["{{ src_ip }}", "{{ dst_ip }}"{% if has_nat and nat_src_ip != src_ip %}, "{{ nat_src_ip }}"{% endif %}]
    },
    "rule": {
        "name": "{{ policy.name }}"
    },
    "source": {
        "ip": "{{ src_ip }}",
{%- if has_nat %}
        "nat": {
            "ip": "{{ nat_src_ip }}",
            "port": {{ nat_src_port }}
        },
{%- endif %}
        "port": {{ src_port }}
    },
    "tags": ["juniper-srx", "forwarded"]
}