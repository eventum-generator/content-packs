{%- set record_id = shared.get('record_id', 1) -%}
{%- set hostname = params.hostname -%}
{%- set domain = params.domain -%}
{%- set fqdn = hostname ~ '.' ~ params.fqdn_suffix -%}
{#- Consume script block from shared state for correlation with 4104 -#}
{%- set script_blocks = shared.get('script_blocks', []) -%}
{%- if script_blocks | length > 0 -%}
  {%- set sb = script_blocks | random -%}
  {%- set script_block_id = sb.script_block_id -%}
  {%- set runspace_id = sb.runspace_id -%}
  {%- set user = sb.user -%}
  {%- set user_sid = sb.user_sid -%}
  {%- set process_id = sb.pid -%}
{%- else -%}
  {%- set script_block_id = module.rand.crypto.uuid4() -%}
  {%- set runspace_id = module.rand.crypto.uuid4() -%}
  {%- set user = (samples.usernames | random).username -%}
  {%- set user_sid = params.domain_sid ~ "-" ~ module.rand.number.integer(1100, 9999) -%}
  {%- set process_id = module.rand.number.integer(1000, 65535) -%}
{%- endif -%}
{%- set thread_id = module.rand.number.integer(1, 8191) -%}
{%- set activity_id = module.rand.crypto.uuid4() -%}
{
    "@timestamp": "{{ timestamp.isoformat() }}",
    "agent": {
        "ephemeral_id": "{{ module.rand.crypto.uuid4() }}",
        "id": "{{ params.agent_id }}",
        "name": "{{ fqdn }}",
        "type": "winlogbeat",
        "version": "{{ params.agent_version }}"
    },
    "ecs": {
        "version": "8.17.0"
    },
    "event": {
        "category": ["process"],
        "code": "4105",
        "kind": "event",
        "module": "powershell",
        "provider": "Microsoft-Windows-PowerShell",
        "type": ["start"]
    },
    "host": {
        "name": "{{ hostname }}",
        "os": {
            "family": "windows",
            "type": "windows"
        }
    },
    "log": {
        "level": "verbose"
    },
    "powershell": {
        "file": {
            "script_block_id": "{{ script_block_id }}"
        },
        "runspace_id": "{{ runspace_id }}"
    },
    "related": {
        "user": ["{{ user }}"]
    },
    "user": {
        "domain": "{{ domain }}",
        "id": "{{ user_sid }}",
        "name": "{{ user }}"
    },
    "winlog": {
        "activity_id": "{{ '{' ~ activity_id ~ '}' }}",
        "channel": "Microsoft-Windows-PowerShell/Operational",
        "computer_name": "{{ fqdn }}",
        "event_id": "4105",
        "level": "verbose",
        "opcode": "Info",
        "process": {
            "pid": {{ process_id }},
            "thread": {
                "id": {{ thread_id }}
            }
        },
        "provider_guid": "{a0c1853b-5c40-4b15-8766-3cf1c58f985a}",
        "provider_name": "Microsoft-Windows-PowerShell",
        "record_id": "{{ record_id }}",
        "task": "CommandStart",
        "time_created": "{{ timestamp.isoformat() }}",
        "user": {
            "domain": "{{ domain }}",
            "identifier": "{{ user_sid }}",
            "name": "{{ user }}",
            "type": "User"
        },
        "version": 1
    }
}
{%- do shared.set('record_id', (record_id + 1) % 2147483647) -%}
