{%- set seq = shared.get('sequencenum', 1) -%}
{%- set hostname = params.hostname -%}
{%- set domain = params.domain -%}
{%- set origin = params.gateway_ip -%}
{%- set direction_type = module.rand.weighted_choice(["inbound", "outbound"], [75, 25]) -%}
{%- set reject_services = [
  [443, 6, "https", "tcp"], [80, 6, "http", "tcp"], [22, 6, "ssh", "tcp"],
  [25, 6, "smtp", "tcp"], [53, 17, "dns", "udp"], [3389, 6, "rdp", "tcp"]
] -%}
{%- set service = reject_services | random -%}
{%- set drop_rules = [] -%}
{%- for r in samples.firewall_rules if r[5] == "Drop" -%}
  {%- do drop_rules.append(r) -%}
{%- endfor -%}
{%- set rule = drop_rules | random -%}
{%- if direction_type == "inbound" -%}
  {%- set src_ip = module.rand.network.ip_v4_public() -%}
  {%- set dst_ip = params.nat_ip -%}
  {%- set inzone = "External" -%}
  {%- set outzone = "Internal" -%}
  {%- set ifname = "eth1" -%}
{%- else -%}
  {%- set src_host = samples.internal_hosts | random -%}
  {%- set src_ip = src_host[0] -%}
  {%- set dst_ip = module.rand.network.ip_v4_public() -%}
  {%- set inzone = "Internal" -%}
  {%- set outzone = "External" -%}
  {%- set ifname = "eth0" -%}
{%- endif -%}
{%- set s_port = module.rand.number.integer(1024, 65535) -%}
{%- set ts_hex = "%x" | format(timestamp.timestamp() | int) -%}
{%- set loguid = "{0x%s,0x%s,0x%s,0x%s}" | format(ts_hex, module.rand.string.hex(1), module.rand.string.hex(8), "c" ~ module.rand.string.hex(7)) -%}
{%- do shared.set('sequencenum', seq + 1) -%}
{
  "@timestamp": "{{ timestamp.isoformat() }}",
  "agent": {
    "ephemeral_id": "{{ module.rand.crypto.uuid4() }}",
    "id": "{{ params.agent_id }}",
    "name": "{{ hostname }}.{{ domain }}",
    "type": "filebeat",
    "version": "{{ params.agent_version }}"
  },
  "checkpoint": {
    "flags": "393216",
    "ifdir": "inbound",
    "ifname": "{{ ifname }}",
    "logid": "0",
    "loguid": "{{ loguid }}",
    "match_id": "{{ rule[0] }}",
    "origin": "{{ origin }}",
    "origin_sic_name": "cn=cp_mgmt,o={{ hostname }}.{{ domain }}",
    "parent_rule": "0",
    "rule": "{{ rule[0] }}",
    "rule_action": "Reject",
    "rule_uid": "{{ rule[2] }}",
    "sequencenum": {{ seq }},
    "version": "5",
    "layer_name": "{{ rule[3] }}",
    "layer_uuid": "{{ rule[4] }}"
  },
  "destination": {
    "ip": "{{ dst_ip }}",
    "port": {{ service[0] }}
  },
  "ecs": {
    "version": "8.17.0"
  },
  "event": {
    "action": "Reject",
    "category": ["network"],
    "dataset": "checkpoint.firewall",
    "kind": "event",
    "module": "checkpoint",
    "outcome": "success",
    "sequence": {{ seq }},
    "type": ["connection", "denied"]
  },
  "host": {
    "hostname": "{{ hostname }}"
  },
  "network": {
    "application": "{{ service[2] }}",
    "direction": "{{ direction_type }}",
    "iana_number": "{{ service[1] }}",
    "name": "{{ rule[3] }}",
    "transport": "{{ service[3] }}"
  },
  "observer": {
    "egress": {
      "interface": { "name": "{{ ifname }}" },
      "zone": "{{ outzone }}"
    },
    "ingress": {
      "interface": { "name": "{{ ifname }}" },
      "zone": "{{ inzone }}"
    },
    "name": "{{ origin }}",
    "product": "VPN-1 & FireWall-1",
    "type": "firewall",
    "vendor": "Checkpoint"
  },
  "related": {
    "ip": ["{{ src_ip }}", "{{ dst_ip }}"]
  },
  "rule": {
    "id": "{{ rule[0] }}",
    "name": "{{ rule[1] }}",
    "uuid": "{{ rule[2] }}"
  },
  "source": {
    "ip": "{{ src_ip }}",
    "port": {{ s_port }}
  },
  "tags": ["checkpoint", "forwarded"]
}
