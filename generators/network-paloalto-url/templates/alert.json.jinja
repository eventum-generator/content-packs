            "name": "{{ username }}"
        }
    },
    "url": {
        "domain": "{{ url_domain }}",
        "original": "{{ url_original }}",
        "path": "{{ url_path }}"
    },
    "user": {
        "domain": "{{ params.domain }}",
        "name": "{{ username }}"
    },
    "user_agent": {
        "original": {{ user_agent | tojson }}
    }
