{%- set record_id = shared.get('record_id', 1) -%}
{%- set hostname = params.sensor_hostname -%}
{#- Inline attempted-dos signatures (JSON samples don't support attribute access) -#}
{%- set sigs = [
  {"sid": 1000070, "gid": 1, "rev": 1, "msg": "DOS SYN flood attack detected", "priority": 2, "protocol": "tcp", "service": ""},
  {"sid": 1000071, "gid": 1, "rev": 2, "msg": "DOS UDP flood attack detected", "priority": 2, "protocol": "udp", "service": ""},
  {"sid": 1000072, "gid": 1, "rev": 1, "msg": "DOS ICMP flood attack - smurf amplification", "priority": 2, "protocol": "icmp", "service": ""},
  {"sid": 1000073, "gid": 1, "rev": 1, "msg": "DOS DNS amplification attack detected", "priority": 2, "protocol": "udp", "service": "dns"}
] -%}
{%- set sig = sigs | random -%}
{#- DoS attacks are inbound -#}
{%- set src_ip = module.rand.network.ip_v4_public() -%}
{%- set dst_host = samples.internal_hosts | random -%}
{%- set dst_ip = dst_host[0] -%}
{#- Protocol-specific setup -#}
{%- if sig.protocol == "icmp" -%}
  {%- set transport = "icmp" -%}
  {%- set iana_number = "1" -%}
  {%- set src_port = 0 -%}
  {%- set dst_port = 0 -%}
{%- elif sig.protocol == "udp" -%}
  {%- set transport = "udp" -%}
  {%- set iana_number = "17" -%}
  {%- set src_port = module.rand.number.integer(1, 65535) -%}
  {%- set dst_port = module.rand.weighted_choice([53, 80, 443, 123], [30, 25, 25, 20]) -%}
{%- else -%}
  {%- set transport = "tcp" -%}
  {%- set iana_number = "6" -%}
  {%- set src_port = module.rand.number.integer(1, 65535) -%}
  {%- set dst_port = module.rand.weighted_choice([80, 443, 22, 3389], [35, 35, 15, 15]) -%}
{%- endif -%}
{#- DoS events may be blocked -#}
{%- set action = module.rand.weighted_choice(["would_drop", "drop", "allow"], [35, 35, 30]) -%}
{%- if action == "allow" -%}
  {%- set event_type = ["allowed"] -%}
  {%- set outcome = "success" -%}
{%- else -%}
  {%- set event_type = ["denied"] -%}
  {%- set outcome = "failure" -%}
{%- endif -%}
{%- set ttl = module.rand.weighted_choice([64, 128, 255, 1, 2], [30, 30, 20, 10, 10]) -%}
{%- set ip_id = module.rand.number.integer(0, 65535) -%}
{%- set pkt_len = module.rand.number.integer(40, 1500) -%}
{%- set community_id = "1:" ~ module.rand.string.hex(20) -%}
{
    "@timestamp": "{{ timestamp.isoformat() }}",
    "agent": {
        "ephemeral_id": "{{ module.rand.crypto.uuid4() }}",
        "id": "{{ params.agent_id }}",
        "name": "{{ hostname }}",
        "type": "filebeat",
        "version": "{{ params.agent_version }}"
    },
{% if transport != "icmp" %}
    "destination": {
        "address": "{{ dst_ip }}",
        "ip": "{{ dst_ip }}",
        "port": {{ dst_port }}
    },
{% else %}
    "destination": {
        "address": "{{ dst_ip }}",
        "ip": "{{ dst_ip }}"
    },
{% endif %}
    "ecs": {
        "version": "8.17.0"
    },
    "event": {
        "action": "{{ action }}",
        "category": ["network", "intrusion_detection"],
        "dataset": "snort.log",
        "kind": "alert",
        "module": "snort",
        "outcome": "{{ outcome }}",
        "severity": {{ sig.priority }},
        "type": {{ event_type | tojson }}
    },
    "host": {
        "name": "{{ hostname }}"
    },
    "log": {
        "level": "alert"
    },
    "network": {
        "community_id": "{{ community_id }}",
        "direction": "inbound",
        "iana_number": "{{ iana_number }}",
{% if sig.service %}
        "protocol": "{{ sig.service }}",
{% endif %}
        "transport": "{{ transport }}",
        "type": "ipv4"
    },
    "observer": {
        "ingress": {
            "interface": {
                "name": "{{ params.sensor_interface }}"
            }
        },
        "name": "{{ hostname }}",
        "product": "ids",
        "type": "ids",
        "vendor": "snort"
    },
    "related": {
        "ip": ["{{ src_ip }}", "{{ dst_ip }}"]
    },
    "rule": {
        "category": "Attempted Denial of Service",
        "description": "{{ sig.msg }}",
        "id": "{{ sig.sid }}",
        "version": "{{ sig.rev }}"
    },
    "snort": {
        "gid": {{ sig.gid }},
        "ip": {
            "id": {{ ip_id }},
            "length": {{ pkt_len }},
            "tos": 0,
            "ttl": {{ ttl }}
        }{% if transport == "tcp" %},
        "tcp": {
            "ack": 0,
            "flags": "{{ module.rand.weighted_choice(["**S*****", "***A****", "**SA****"], [60, 20, 20]) }}",
            "length": 20,
            "seq": {{ module.rand.number.integer(100000, 4294967295) }},
            "window": {{ module.rand.weighted_choice([65535, 0, 1024], [40, 30, 30]) }}
        }{% elif transport == "udp" %},
        "udp": {
            "length": {{ pkt_len }}
        }{% else %},
        "icmp": {
            "code": 0,
            "type": 8
        }{% endif %}
    },
{% if transport != "icmp" %}
    "source": {
        "address": "{{ src_ip }}",
        "ip": "{{ src_ip }}",
        "port": {{ src_port }}
    },
{% else %}
    "source": {
        "address": "{{ src_ip }}",
        "ip": "{{ src_ip }}"
    },
{% endif %}
    "tags": ["forwarded", "snort.log"]
}
{%- do shared.set('record_id', (record_id + 1) % 2147483647) -%}