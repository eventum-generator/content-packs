{%- set record_id = shared.get('record_id', 1) -%}
{%- set hostname = params.sensor_hostname -%}
{#- Inline trojan-activity signatures (JSON samples don't support attribute access) -#}
{%- set sigs = [
  {"sid": 23493, "gid": 1, "rev": 6, "msg": "MALWARE-CNC Win.Trojan.ZeroAccess outbound connection", "priority": 1, "protocol": "tcp", "service": "http"},
  {"sid": 40522, "gid": 1, "rev": 3, "msg": "MALWARE-CNC Unix.Trojan.Mirai variant post compromise fingerprinting", "priority": 1, "protocol": "tcp", "service": "http"},
  {"sid": 42079, "gid": 1, "rev": 1, "msg": "MALWARE-CNC Win.Trojan.Jenxcus outbound connection attempt", "priority": 1, "protocol": "tcp", "service": "http"},
  {"sid": 45000, "gid": 1, "rev": 2, "msg": "MALWARE-CNC Cobalt Strike beacon outbound connection", "priority": 1, "protocol": "tcp", "service": "http"},
  {"sid": 45001, "gid": 1, "rev": 1, "msg": "MALWARE-CNC Win.Backdoor.Emotet POST request detected", "priority": 1, "protocol": "tcp", "service": "http"},
  {"sid": 45002, "gid": 1, "rev": 1, "msg": "MALWARE-CNC Generic trojan DNS beacon to suspicious TLD", "priority": 1, "protocol": "udp", "service": "dns"}
] -%}
{%- set sig = sigs | random -%}
{#- Trojans are predominantly outbound (infected internal host calling home) -#}
{%- set direction = module.rand.weighted_choice(["outbound", "inbound"], [75, 25]) -%}
{%- if direction == "outbound" -%}
  {%- set src_host = samples.internal_hosts | random -%}
  {%- set src_ip = src_host[0] -%}
  {%- set src_port = module.rand.number.integer(49152, 65535) -%}
  {%- set dst_ip = module.rand.network.ip_v4_public() -%}
  {%- set dst_port = module.rand.weighted_choice([80, 443, 8080, 8443, 4444, 1337], [30, 35, 10, 10, 10, 5]) -%}
{%- else -%}
  {%- set src_ip = module.rand.network.ip_v4_public() -%}
  {%- set src_port = module.rand.number.integer(49152, 65535) -%}
  {%- set dst_host = samples.internal_hosts | random -%}
  {%- set dst_ip = dst_host[0] -%}
  {%- set dst_port = module.rand.weighted_choice([80, 443, 445, 3389], [30, 40, 15, 15]) -%}
{%- endif -%}
{#- IPS action: most trojans get blocked in well-tuned deployments -#}
{%- set action = module.rand.weighted_choice(["allow", "would_drop", "drop"], [30, 40, 30]) -%}
{%- if action == "allow" -%}
  {%- set event_type = ["allowed"] -%}
  {%- set outcome = "success" -%}
{%- else -%}
  {%- set event_type = ["denied"] -%}
  {%- set outcome = "failure" -%}
{%- endif -%}
{#- TCP metadata -#}
{%- set tcp_flags = module.rand.weighted_choice(["***AP***", "***A****", "**S*****", "****P***"], [50, 25, 15, 10]) -%}
{%- set tcp_seq = module.rand.number.integer(100000, 4294967295) -%}
{%- set tcp_ack = module.rand.number.integer(100000, 4294967295) -%}
{%- set tcp_win = module.rand.weighted_choice([65535, 32768, 16384, 8192, 29200], [30, 25, 15, 10, 20]) -%}
{%- set ttl = module.rand.weighted_choice([64, 128, 63, 127, 255, 60, 56], [30, 30, 10, 10, 5, 10, 5]) -%}
{%- set ip_id = module.rand.number.integer(1, 65535) -%}
{%- set pkt_len = module.rand.number.integer(60, 1500) -%}
{%- set community_id = "1:" ~ module.rand.string.hex(20) -%}
{#- Push scan source for correlation with recon templates -#}
{%- if direction == "inbound" -%}
  {%- set scan_sources = shared.get('scan_sources', []) -%}
  {%- do scan_sources.append(src_ip) -%}
  {%- if scan_sources | length > 50 -%}{%- do scan_sources.pop(0) -%}{%- endif -%}
  {%- do shared.set('scan_sources', scan_sources) -%}
{%- endif -%}
{
    "@timestamp": "{{ timestamp.isoformat() }}",
    "agent": {
        "ephemeral_id": "{{ module.rand.crypto.uuid4() }}",
        "id": "{{ params.agent_id }}",
        "name": "{{ hostname }}",
        "type": "filebeat",
        "version": "{{ params.agent_version }}"
    },
    "destination": {
        "address": "{{ dst_ip }}",
        "ip": "{{ dst_ip }}",
        "port": {{ dst_port }}
    },
    "ecs": {
        "version": "8.17.0"
    },
    "event": {
        "action": "{{ action }}",
        "category": ["network", "intrusion_detection"],
        "dataset": "snort.log",
        "kind": "alert",
        "module": "snort",
        "outcome": "{{ outcome }}",
        "severity": {{ sig.priority }},
        "type": {{ event_type | tojson }}
    },
    "host": {
        "name": "{{ hostname }}"
    },
    "log": {
        "level": "alert"
    },
    "network": {
        "community_id": "{{ community_id }}",
        "direction": "{{ direction }}",
        "iana_number": "6",
        "transport": "tcp",
        "type": "ipv4"
    },
    "observer": {
        "ingress": {
            "interface": {
                "name": "{{ params.sensor_interface }}"
            }
        },
        "name": "{{ hostname }}",
        "product": "ids",
        "type": "ids",
        "vendor": "snort"
    },
    "related": {
        "ip": ["{{ src_ip }}", "{{ dst_ip }}"]
    },
    "rule": {
        "category": "Trojan Activity",
        "description": "{{ sig.msg }}",
        "id": "{{ sig.sid }}",
        "version": "{{ sig.rev }}"
    },
    "snort": {
        "gid": {{ sig.gid }},
        "ip": {
            "id": {{ ip_id }},
            "length": {{ pkt_len }},
            "tos": 0,
            "ttl": {{ ttl }}
        },
        "tcp": {
            "ack": {{ tcp_ack }},
            "flags": "{{ tcp_flags }}",
            "length": 20,
            "seq": {{ tcp_seq }},
            "window": {{ tcp_win }}
        }
    },
    "source": {
        "address": "{{ src_ip }}",
        "ip": "{{ src_ip }}",
        "port": {{ src_port }}
    },
    "tags": ["forwarded", "snort.log"]
}
{%- do shared.set('record_id', (record_id + 1) % 2147483647) -%}