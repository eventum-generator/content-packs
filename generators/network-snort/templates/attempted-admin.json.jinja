{%- set record_id = shared.get('record_id', 1) -%}
{%- set hostname = params.sensor_hostname -%}
{#- Inline attempted-admin signatures (JSON samples don't support attribute access) -#}
{%- set sigs = [
  {"sid": 1000010, "gid": 1, "rev": 2, "msg": "SERVER-OTHER OpenSSL Heartbleed information leak attempt", "priority": 1, "protocol": "tcp", "service": "https"},
  {"sid": 1000011, "gid": 1, "rev": 1, "msg": "SERVER-OTHER SMB EternalBlue remote code execution attempt", "priority": 1, "protocol": "tcp", "service": "smb"},
  {"sid": 1000012, "gid": 1, "rev": 3, "msg": "SERVER-APACHE Apache HTTP Server path traversal attempt", "priority": 1, "protocol": "tcp", "service": "http"},
  {"sid": 1000013, "gid": 1, "rev": 1, "msg": "SERVER-OTHER Microsoft Exchange ProxyShell exploitation attempt", "priority": 1, "protocol": "tcp", "service": "http"}
] -%}
{%- set sig = sigs | random -%}
{#- Admin exploitation is predominantly inbound -#}
{%- set src_ip = module.rand.network.ip_v4_public() -%}
{%- set src_port = module.rand.number.integer(49152, 65535) -%}
{%- set dst_host = samples.internal_hosts | random -%}
{%- set dst_ip = dst_host[0] -%}
{#- Port depends on the service targeted -#}
{%- set service_port_map = {"http": 80, "https": 443, "smb": 445} -%}
{%- set dst_port = service_port_map.get(sig.service, 80) -%}
{#- IPS action -#}
{%- set action = module.rand.weighted_choice(["would_drop", "drop", "allow"], [35, 45, 20]) -%}
{%- if action == "allow" -%}
  {%- set event_type = ["allowed"] -%}
  {%- set outcome = "success" -%}
{%- else -%}
  {%- set event_type = ["denied"] -%}
  {%- set outcome = "failure" -%}
{%- endif -%}
{#- TCP metadata -#}
{%- set tcp_flags = module.rand.weighted_choice(["***AP***", "***A****", "****P***"], [55, 30, 15]) -%}
{%- set tcp_seq = module.rand.number.integer(100000, 4294967295) -%}
{%- set tcp_ack = module.rand.number.integer(100000, 4294967295) -%}
{%- set tcp_win = module.rand.weighted_choice([65535, 29200, 16384, 8192], [30, 30, 20, 20]) -%}
{%- set ttl = module.rand.weighted_choice([64, 128, 60, 48, 52], [25, 25, 20, 15, 15]) -%}
{%- set ip_id = module.rand.number.integer(1, 65535) -%}
{%- set pkt_len = module.rand.number.integer(100, 1500) -%}
{%- set community_id = "1:" ~ module.rand.string.hex(20) -%}
{
    "@timestamp": "{{ timestamp.isoformat() }}",
    "agent": {
        "ephemeral_id": "{{ module.rand.crypto.uuid4() }}",
        "id": "{{ params.agent_id }}",
        "name": "{{ hostname }}",
        "type": "filebeat",
        "version": "{{ params.agent_version }}"
    },
    "destination": {
        "address": "{{ dst_ip }}",
        "ip": "{{ dst_ip }}",
        "port": {{ dst_port }}
    },
    "ecs": {
        "version": "8.17.0"
    },
    "event": {
        "action": "{{ action }}",
        "category": ["network", "intrusion_detection"],
        "dataset": "snort.log",
        "kind": "alert",
        "module": "snort",
        "outcome": "{{ outcome }}",
        "severity": {{ sig.priority }},
        "type": {{ event_type | tojson }}
    },
    "host": {
        "name": "{{ hostname }}"
    },
    "log": {
        "level": "alert"
    },
    "network": {
        "community_id": "{{ community_id }}",
        "direction": "inbound",
        "iana_number": "6",
{% if sig.service %}
        "protocol": "{{ sig.service }}",
{% endif %}
        "transport": "tcp",
        "type": "ipv4"
    },
    "observer": {
        "ingress": {
            "interface": {
                "name": "{{ params.sensor_interface }}"
            }
        },
        "name": "{{ hostname }}",
        "product": "ids",
        "type": "ids",
        "vendor": "snort"
    },
    "related": {
        "ip": ["{{ src_ip }}", "{{ dst_ip }}"]
    },
    "rule": {
        "category": "Attempted Administrator Privilege Gain",
        "description": "{{ sig.msg }}",
        "id": "{{ sig.sid }}",
        "version": "{{ sig.rev }}"
    },
    "snort": {
        "gid": {{ sig.gid }},
        "ip": {
            "id": {{ ip_id }},
            "length": {{ pkt_len }},
            "tos": 0,
            "ttl": {{ ttl }}
        },
        "tcp": {
            "ack": {{ tcp_ack }},
            "flags": "{{ tcp_flags }}",
            "length": 20,
            "seq": {{ tcp_seq }},
            "window": {{ tcp_win }}
        }
    },
    "source": {
        "address": "{{ src_ip }}",
        "ip": "{{ src_ip }}",
        "port": {{ src_port }}
    },
    "tags": ["forwarded", "snort.log"]
}
{%- do shared.set('record_id', record_id + 1) -%}