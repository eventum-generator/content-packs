{%- set record_id = shared.get('record_id', 1) -%}
{%- set hostname = params.sensor_hostname -%}
{#- Inline policy-violation signatures (JSON samples don't support attribute access) -#}
{%- set sigs = [
  {"sid": 41083, "gid": 1, "rev": 1, "msg": "POLICY-OTHER Suspicious .bit DNS query - potential C2 channel", "priority": 1, "protocol": "udp", "service": "dns"},
  {"sid": 39867, "gid": 1, "rev": 3, "msg": "POLICY-OTHER Suspicious .tk DNS query - potential malicious domain", "priority": 1, "protocol": "udp", "service": "dns"},
  {"sid": 1000020, "gid": 1, "rev": 1, "msg": "POLICY-OTHER Tor exit node connection detected", "priority": 1, "protocol": "tcp", "service": "https"},
  {"sid": 1000021, "gid": 1, "rev": 2, "msg": "POLICY-OTHER Cryptocurrency mining pool DNS query", "priority": 1, "protocol": "udp", "service": "dns"},
  {"sid": 1000022, "gid": 1, "rev": 1, "msg": "POLICY-OTHER BitTorrent DHT ping request detected", "priority": 1, "protocol": "udp", "service": "bittorrent"}
] -%}
{%- set sig = sigs | random -%}
{#- Policy violations are predominantly outbound (internal users breaking policy) -#}
{%- set direction = module.rand.weighted_choice(["outbound", "internal"], [80, 20]) -%}
{%- set src_host = samples.internal_hosts | random -%}
{%- set src_ip = src_host[0] -%}
{%- set src_port = module.rand.number.integer(49152, 65535) -%}
{%- if direction == "outbound" -%}
  {%- set dst_ip = module.rand.network.ip_v4_public() -%}
{%- else -%}
  {%- set dst_host = samples.internal_hosts | random -%}
  {%- set dst_ip = dst_host[0] -%}
{%- endif -%}
{#- Port depends on protocol -#}
{%- if sig.protocol == "udp" -%}
  {%- set dst_port = module.rand.weighted_choice([53, 6881, 6882, 8333], [50, 20, 15, 15]) -%}
  {%- set transport = "udp" -%}
  {%- set iana_number = "17" -%}
{%- else -%}
  {%- set dst_port = module.rand.weighted_choice([443, 80, 9001, 6881], [40, 25, 20, 15]) -%}
  {%- set transport = "tcp" -%}
  {%- set iana_number = "6" -%}
{%- endif -%}
{#- Policy violations are usually just alerts, not blocked -#}
{%- set action = module.rand.weighted_choice(["allow", "would_drop"], [70, 30]) -%}
{%- if action == "allow" -%}
  {%- set event_type = ["allowed"] -%}
  {%- set outcome = "success" -%}
{%- else -%}
  {%- set event_type = ["denied"] -%}
  {%- set outcome = "failure" -%}
{%- endif -%}
{%- set ttl = module.rand.weighted_choice([64, 128, 63, 127], [35, 35, 15, 15]) -%}
{%- set ip_id = module.rand.number.integer(1, 65535) -%}
{%- set pkt_len = module.rand.number.integer(60, 800) -%}
{%- set community_id = "1:" ~ module.rand.string.hex(20) -%}
{
    "@timestamp": "{{ timestamp.isoformat() }}",
    "agent": {
        "ephemeral_id": "{{ module.rand.crypto.uuid4() }}",
        "id": "{{ params.agent_id }}",
        "name": "{{ hostname }}",
        "type": "filebeat",
        "version": "{{ params.agent_version }}"
    },
    "destination": {
        "address": "{{ dst_ip }}",
        "ip": "{{ dst_ip }}",
        "port": {{ dst_port }}
    },
    "ecs": {
        "version": "8.17.0"
    },
    "event": {
        "action": "{{ action }}",
        "category": ["network", "intrusion_detection"],
        "dataset": "snort.log",
        "kind": "alert",
        "module": "snort",
        "outcome": "{{ outcome }}",
        "severity": {{ sig.priority }},
        "type": {{ event_type | tojson }}
    },
    "host": {
        "name": "{{ hostname }}"
    },
    "log": {
        "level": "alert"
    },
    "network": {
        "community_id": "{{ community_id }}",
        "direction": "{{ direction }}",
        "iana_number": "{{ iana_number }}",
{% if sig.service %}
        "protocol": "{{ sig.service }}",
{% endif %}
        "transport": "{{ transport }}",
        "type": "ipv4"
    },
    "observer": {
        "ingress": {
            "interface": {
                "name": "{{ params.sensor_interface }}"
            }
        },
        "name": "{{ hostname }}",
        "product": "ids",
        "type": "ids",
        "vendor": "snort"
    },
    "related": {
        "ip": ["{{ src_ip }}", "{{ dst_ip }}"]
    },
    "rule": {
        "category": "Potential Corporate Privacy Violation",
        "description": "{{ sig.msg }}",
        "id": "{{ sig.sid }}",
        "version": "{{ sig.rev }}"
    },
    "snort": {
        "gid": {{ sig.gid }},
        "ip": {
            "id": {{ ip_id }},
            "length": {{ pkt_len }},
            "tos": 0,
            "ttl": {{ ttl }}
        }{% if transport == "tcp" %},
        "tcp": {
            "ack": {{ module.rand.number.integer(100000, 4294967295) }},
            "flags": "{{ module.rand.weighted_choice(["***AP***", "***A****"], [60, 40]) }}",
            "length": 20,
            "seq": {{ module.rand.number.integer(100000, 4294967295) }},
            "window": {{ module.rand.weighted_choice([65535, 29200, 32768], [35, 35, 30]) }}
        }{% else %},
        "udp": {
            "length": {{ pkt_len }}
        }{% endif %}
    },
    "source": {
        "address": "{{ src_ip }}",
        "ip": "{{ src_ip }}",
        "port": {{ src_port }}
    },
    "tags": ["forwarded", "snort.log"]
}
{%- do shared.set('record_id', record_id + 1) -%}