{%- set record_id = shared.get('record_id', 1) -%}
{%- set hostname = params.hostname -%}
{%- set domain = params.domain -%}
{%- set fqdn = hostname ~ '.' ~ params.fqdn_suffix -%}
{#- Process tampering â€” commonly triggered by browsers (Chrome, Edge, Firefox) -#}
{%- set tamper_processes = ["C:\\Program Files\\Google\\Chrome\\Application\\chrome.exe", "C:\\Program Files (x86)\\Microsoft\\Edge\\Application\\msedge.exe", "C:\\Program Files\\Mozilla Firefox\\firefox.exe", "C:\\Program Files\\Google\\Chrome\\Application\\chrome.exe"] -%}
{%- set process_image = module.rand.choice(tamper_processes) -%}
{%- set process_name = process_image.split("\\")[-1] -%}
{%- set process_guid = '{' ~ module.rand.crypto.uuid4() ~ '}' -%}
{%- set process_id = module.rand.number.integer(100, 65535) -%}
{%- set tamper_type = module.rand.weighted_choice(["Image is replaced", "Image is locked for access"], [70, 30]) -%}
{%- set user_name = (samples.usernames | random).username -%}
{%- set user_domain = domain -%}
{%- set sysmon_pid = module.rand.number.integer(1000, 5000) -%}
{%- set sysmon_tid = module.rand.number.integer(1000, 8000) -%}
{
    "@timestamp": "{{ timestamp.isoformat() }}",
    "agent": {
        "ephemeral_id": "{{ module.rand.crypto.uuid4() }}",
        "id": "{{ params.agent_id }}",
        "name": "{{ fqdn }}",
        "type": "winlogbeat",
        "version": "{{ params.agent_version }}"
    },
    "ecs": {
        "version": "8.17.0"
    },
    "event": {
        "action": "ProcessTampering",
        "category": ["process"],
        "code": "25",
        "created": "{{ timestamp.isoformat() }}",
        "kind": "event",
        "module": "sysmon",
        "provider": "Microsoft-Windows-Sysmon",
        "type": ["change"]
    },
    "host": {
        "name": "{{ hostname }}",
        "os": {
            "family": "windows",
            "type": "windows"
        }
    },
    "log": {
        "level": "information"
    },
    "process": {
        "entity_id": "{{ process_guid }}",
        "executable": "{{ process_image }}",
        "name": "{{ process_name }}",
        "pid": {{ process_id }}
    },
    "related": {
        "user": ["{{ user_name }}"]
    },
    "user": {
        "domain": "{{ user_domain }}",
        "id": "S-1-5-18",
        "name": "{{ user_name }}"
    },
    "winlog": {
        "channel": "Microsoft-Windows-Sysmon/Operational",
        "computer_name": "{{ fqdn }}",
        "event_data": {
            "Type": "{{ tamper_type }}"
        },
        "event_id": "25",
        "opcode": "Info",
        "process": {
            "pid": {{ sysmon_pid }},
            "thread": {
                "id": {{ sysmon_tid }}
            }
        },
        "provider_guid": "{5770385f-c22a-43e0-bf4c-06f5698ffbd9}",
        "provider_name": "Microsoft-Windows-Sysmon",
        "record_id": "{{ record_id }}",
        "user": {
            "identifier": "S-1-5-18"
        },
        "version": 5
    }
}
{%- do shared.set('record_id', record_id + 1) -%}