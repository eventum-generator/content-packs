{%- set host = samples.hosts | random -%}
{%- set hostname = host.name -%}
{%- set domain = params.domain -%}
{%- set fqdn = hostname ~ '.' ~ params.fqdn_suffix -%}
{%- set record_id = shared.get('record_id:' ~ hostname, 1) -%}
{#- Pick an active process (non-consuming) or fallback -#}
{%- set proc_pool = shared.get('proc_pool:' ~ hostname, []) -%}
{%- if proc_pool | length > 0 -%}
  {%- set active_proc = proc_pool | random -%}
  {%- set process_guid = active_proc.guid -%}
  {%- set process_id = active_proc.pid -%}
  {%- set process_image = active_proc.image -%}
  {%- set process_name = active_proc.name -%}
  {%- set user_name = active_proc.user_name -%}
  {%- set user_domain = active_proc.user_domain -%}
{%- else -%}
  {%- set proc = samples.processes | random -%}
  {%- set process_guid = '{' ~ module.rand.crypto.uuid4() ~ '}' -%}
  {%- set process_id = module.rand.number.integer(100, 65535) -%}
  {%- set process_image = proc.path -%}
  {%- set process_name = proc.name -%}
  {%- set user_name = (samples.usernames | random).username -%}
  {%- set user_domain = domain -%}
{%- endif -%}
{#- Target file with Zone.Identifier ADS -#}
{%- set base_files = ["C:\\Users\\" ~ user_name ~ "\\Downloads\\setup.exe", "C:\\Users\\" ~ user_name ~ "\\Downloads\\report.pdf", "C:\\Users\\" ~ user_name ~ "\\Downloads\\document.docx", "C:\\Users\\" ~ user_name ~ "\\Desktop\\tool.zip", "C:\\Users\\" ~ user_name ~ "\\Downloads\\image.png"] -%}
{%- set base_file = module.rand.choice(base_files) -%}
{%- set target_filename = base_file ~ ":Zone.Identifier" -%}
{%- set zone_id = module.rand.weighted_choice(["3", "2", "4"], [80, 15, 5]) -%}
{%- set contents = "[ZoneTransfer]\\r\\nZoneId=" ~ zone_id -%}
{%- set hash_sha1 = module.rand.string.hex(40) -%}
{%- set hash_md5 = module.rand.string.hex(32) -%}
{%- set hash_sha256 = module.rand.string.hex(64) -%}
{%- set sysmon_pid = module.rand.number.integer(1000, 5000) -%}
{%- set sysmon_tid = module.rand.number.integer(1000, 8000) -%}
{
    "@timestamp": "{{ timestamp.isoformat() }}",
    "agent": {
        "ephemeral_id": "{{ module.rand.crypto.uuid4() }}",
        "id": "{{ host.agent_id }}",
        "name": "{{ fqdn }}",
        "type": "winlogbeat",
        "version": "{{ params.agent_version }}"
    },
    "ecs": {
        "version": "8.17.0"
    },
    "event": {
        "action": "FileCreateStreamHash",
        "category": ["file"],
        "code": "15",
        "created": "{{ timestamp.isoformat() }}",
        "kind": "event",
        "module": "sysmon",
        "provider": "Microsoft-Windows-Sysmon",
        "type": ["access"]
    },
    "file": {
        "hash": {
            "md5": "{{ hash_md5 }}",
            "sha1": "{{ hash_sha1 }}",
            "sha256": "{{ hash_sha256 }}"
        },
        "name": "Zone.Identifier",
        "path": {{ target_filename | tojson }}
    },
    "host": {
        "name": "{{ hostname }}",
        "os": {
            "family": "windows",
            "type": "windows"
        }
    },
    "log": {
        "level": "information"
    },
    "process": {
        "entity_id": "{{ process_guid }}",
        "executable": {{ process_image | tojson }},
        "name": "{{ process_name }}",
        "pid": {{ process_id }}
    },
    "related": {
        "hash": ["{{ hash_sha1 }}", "{{ hash_md5 }}", "{{ hash_sha256 }}"],
        "user": ["{{ user_name }}"]
    },
    "user": {
        "domain": "{{ user_domain }}",
        "id": "S-1-5-18",
        "name": "{{ user_name }}"
    },
    "winlog": {
        "channel": "Microsoft-Windows-Sysmon/Operational",
        "computer_name": "{{ fqdn }}",
        "event_data": {
            "Contents": "{{ contents }}",
            "CreationUtcTime": "{{ timestamp.strftime('%Y-%m-%d %H:%M:%S.') }}{{ '%03d' | format(timestamp.microsecond // 1000) }}"
        },
        "event_id": "15",
        "opcode": "Info",
        "process": {
            "pid": {{ sysmon_pid }},
            "thread": {
                "id": {{ sysmon_tid }}
            }
        },
        "provider_guid": "{5770385f-c22a-43e0-bf4c-06f5698ffbd9}",
        "provider_name": "Microsoft-Windows-Sysmon",
        "record_id": "{{ record_id }}",
        "user": {
            "identifier": "S-1-5-18"
        },
        "version": 5
    }
}
{%- do shared.set('record_id:' ~ hostname, (record_id + 1) % 2147483647) -%}