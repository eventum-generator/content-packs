{%- set record_id = shared.get('record_id', 1) -%}
{%- set hostname = params.hostname -%}
{%- set domain = params.domain -%}
{%- set fqdn = hostname ~ '.' ~ params.fqdn_suffix -%}
{%- set domain_sid = params.domain_sid -%}
{#- Subject — typically SYSTEM, admin, or service account -#}
{%- set user_type = module.rand.weighted_choice(["system", "admin", "service"], [50, 30, 20]) -%}
{%- if user_type == "system" -%}
  {%- set subject_user = "SYSTEM" -%}
  {%- set subject_domain = "NT AUTHORITY" -%}
  {%- set subject_sid = "S-1-5-18" -%}
  {%- set subject_logon_id = "0x3e7" -%}
{%- elif user_type == "admin" -%}
  {%- set subject_user = "Administrator" -%}
  {%- set subject_domain = domain -%}
  {%- set subject_sid = domain_sid ~ "-500" -%}
  {%- set subject_logon_id = "0x" ~ module.rand.string.hex(5) -%}
{%- else -%}
  {%- set subject_user = module.rand.choice(["svc_backup", "svc_sql", "svc_iis", "svc_exchange"]) -%}
  {%- set subject_domain = domain -%}
  {%- set subject_sid = domain_sid ~ "-" ~ module.rand.number.integer(2000, 2100) -%}
  {%- set subject_logon_id = "0x" ~ module.rand.string.hex(5) -%}
{%- endif -%}
{#- Privilege list — realistic subsets -#}
{%- set all_privs = ["SeSecurityPrivilege", "SeTakeOwnershipPrivilege", "SeLoadDriverPrivilege", "SeBackupPrivilege", "SeRestorePrivilege", "SeDebugPrivilege", "SeSystemEnvironmentPrivilege", "SeImpersonatePrivilege", "SeDelegateSessionUserImpersonatePrivilege", "SeAuditPrivilege", "SeAssignPrimaryTokenPrivilege", "SeTcbPrivilege", "SeCreateTokenPrivilege"] -%}
{%- set priv_count = module.rand.number.integer(3, 9) -%}
{%- set privs = module.rand.choices(all_privs, priv_count) -%}
{%- set process_id = module.rand.number.integer(4, 65535) -%}
{%- set thread_id = module.rand.number.integer(1, 8191) -%}
{
    "@timestamp": "{{ timestamp.isoformat() }}",
    "agent": {
        "ephemeral_id": "{{ module.rand.crypto.uuid4() }}",
        "id": "{{ params.agent_id }}",
        "name": "{{ fqdn }}",
        "type": "winlogbeat",
        "version": "{{ params.agent_version }}"
    },
    "ecs": {
        "version": "8.17.0"
    },
    "event": {
        "action": "logged-in-special",
        "category": ["iam"],
        "code": "4672",
        "kind": "event",
        "module": "security",
        "outcome": "success",
        "provider": "Microsoft-Windows-Security-Auditing",
        "type": ["admin"]
    },
    "host": {
        "name": "{{ hostname }}",
        "os": {
            "family": "windows",
            "type": "windows"
        }
    },
    "log": {
        "level": "information"
    },
    "related": {
        "user": ["{{ subject_user }}"]
    },
    "user": {
        "domain": "{{ subject_domain }}",
        "id": "{{ subject_sid }}",
        "name": "{{ subject_user }}"
    },
    "winlog": {
        "channel": "Security",
        "computer_name": "{{ fqdn }}",
        "event_data": {
            "PrivilegeList": {{ privs | tojson }},
            "SubjectDomainName": "{{ subject_domain }}",
            "SubjectLogonId": "{{ subject_logon_id }}",
            "SubjectUserName": "{{ subject_user }}",
            "SubjectUserSid": "{{ subject_sid }}"
        },
        "event_id": "4672",
        "keywords": ["Audit Success"],
        "level": "information",
        "opcode": "Info",
        "outcome": "success",
        "process": {
            "pid": {{ process_id }},
            "thread": {
                "id": {{ thread_id }}
            }
        },
        "provider_guid": "{54849625-5478-4994-A5BA-3E3B0328C30D}",
        "provider_name": "Microsoft-Windows-Security-Auditing",
        "record_id": "{{ record_id }}",
        "task": "Special Logon",
        "time_created": "{{ timestamp.isoformat() }}"
    }
}
{%- do shared.set('record_id', (record_id + 1) % 2147483647) -%}
