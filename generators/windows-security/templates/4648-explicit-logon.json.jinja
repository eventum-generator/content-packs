{%- set host = samples.hosts | random -%}
{%- set hostname = host.name -%}
{%- set domain = params.domain -%}
{%- set fqdn = hostname ~ '.' ~ params.fqdn_suffix -%}
{%- set record_id = shared.get('record_id:' ~ hostname, 1) -%}
{%- set domain_sid = params.domain_sid -%}
{#- Subject — the user performing RunAs or explicit credential usage -#}
{%- set subject_user = (samples.usernames | random).username -%}
{%- set subject_sid = domain_sid ~ "-" ~ module.rand.number.integer(1100, 9999) -%}
{%- set subject_logon_id = "0x" ~ module.rand.string.hex(5) -%}
{#- Target — the account whose credentials are used (often admin) -#}
{%- set target_type = module.rand.weighted_choice(["admin", "service", "regular"], [50, 30, 20]) -%}
{%- if target_type == "admin" -%}
  {%- set target_user = "Administrator" -%}
{%- elif target_type == "service" -%}
  {%- set target_user = module.rand.choice(["svc_backup", "svc_sql", "svc_iis"]) -%}
{%- else -%}
  {%- set target_user = (samples.usernames | random).username -%}
{%- endif -%}
{#- Target server -#}
{%- set target_server = module.rand.choice(["localhost", (samples.hosts | selectattr("role", "equalto", "server") | list | random).name]) -%}
{#- Process — typically svchost, runas, or mmc -#}
{%- set proc_info = module.rand.choice([
  {"pid": "0x368", "name": "svchost.exe", "path": "C:\\Windows\\System32\\svchost.exe"},
  {"pid": "0x2a4", "name": "runas.exe", "path": "C:\\Windows\\System32\\runas.exe"},
  {"pid": "0x1f0", "name": "mmc.exe", "path": "C:\\Windows\\System32\\mmc.exe"},
  {"pid": "0x4b8", "name": "taskeng.exe", "path": "C:\\Windows\\System32\\taskeng.exe"}
]) -%}
{%- set src_ip = module.rand.weighted_choice([module.rand.network.ip_v4_private_c(), "::1", "-"], [50, 30, 20]) -%}
{%- set process_id = module.rand.number.integer(4, 65535) -%}
{%- set thread_id = module.rand.number.integer(1, 8191) -%}
{
    "@timestamp": "{{ timestamp.isoformat() }}",
    "agent": {
        "ephemeral_id": "{{ module.rand.crypto.uuid4() }}",
        "id": "{{ host.agent_id }}",
        "name": "{{ fqdn }}",
        "type": "winlogbeat",
        "version": "{{ params.agent_version }}"
    },
    "ecs": {
        "version": "8.17.0"
    },
    "event": {
        "action": "logged-in-explicit",
        "category": ["authentication"],
        "code": "4648",
        "kind": "event",
        "module": "security",
        "outcome": "success",
        "provider": "Microsoft-Windows-Security-Auditing",
        "type": ["start"]
    },
    "host": {
        "name": "{{ hostname }}",
        "os": {
            "family": "windows",
            "type": "windows"
        }
    },
    "log": {
        "level": "information"
    },
    "related": {
        "user": ["{{ subject_user }}", "{{ target_user }}"]
    },
    "user": {
        "domain": "{{ domain }}",
        "id": "{{ subject_sid }}",
        "name": "{{ subject_user }}",
        "target": {
            "domain": "{{ domain }}",
            "name": "{{ target_user }}"
        }
    },
    "winlog": {
        "channel": "Security",
        "computer_name": "{{ fqdn }}",
        "event_data": {
            "IpAddress": "{{ src_ip }}",
            "IpPort": "0",
            "LogonGuid": "{{ '{' ~ module.rand.crypto.uuid4() ~ '}' }}",
            "ProcessId": "{{ proc_info.pid }}",
            "ProcessName": {{ proc_info.path | tojson }},
            "SubjectDomainName": "{{ domain }}",
            "SubjectLogonId": "{{ subject_logon_id }}",
            "SubjectUserName": "{{ subject_user }}",
            "SubjectUserSid": "{{ subject_sid }}",
            "TargetDomainName": "{{ domain }}",
            "TargetLogonGuid": "{{ '{' ~ module.rand.crypto.uuid4() ~ '}' }}",
            "TargetServerName": "{{ target_server }}",
            "TargetInfo": "{{ target_server }}",
            "TargetUserName": "{{ target_user }}"
        },
        "event_id": "4648",
        "keywords": ["Audit Success"],
        "level": "information",
        "opcode": "Info",
        "outcome": "success",
        "process": {
            "pid": {{ process_id }},
            "thread": {
                "id": {{ thread_id }}
            }
        },
        "provider_guid": "{54849625-5478-4994-A5BA-3E3B0328C30D}",
        "provider_name": "Microsoft-Windows-Security-Auditing",
        "record_id": "{{ record_id }}",
        "task": "Logon",
        "time_created": "{{ timestamp.isoformat() }}"
    }
}
{%- do shared.set('record_id:' ~ hostname, (record_id + 1) % 2147483647) -%}
